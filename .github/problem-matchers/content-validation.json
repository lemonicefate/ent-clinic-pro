{
  "problemMatcher": [
    {
      "owner": "content-validation",
      "pattern": [
        {
          "regexp": "^❌\\s+(.+):\\s+(.+)$",
          "file": 1,
          "message": 2,
          "severity": "error"
        }
      ]
    },
    {
      "owner": "content-warning",
      "pattern": [
        {
          "regexp": "^⚠️\\s+(.+):\\s+(.+)$",
          "file": 1,
          "message": 2,
          "severity": "warning"
        }
      ]
    },
    {
      "owner": "markdownlint",
      "pattern": [
        {
          "regexp": "^(.+):(\\d+):(\\d+)\\s+(MD\\d+)\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5,
          "severity": "warning"
        }
      ]
    },
    {
      "owner": "astro-check",
      "pattern": [
        {
          "regexp": "^(.+):(\\d+):(\\d+)\\s+-\\s+(error|warning)\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      ]
    }
  ]
}