src/content/education/**/*drug* @pharmacist-reviewer @medical-advisors
src/content/education/**/*prescription* @pharmacist-reviewer @medical-advisors

# 涉及手術或侵入性治療的內容需要專科醫師審核
src/content/education/**/*surgery* @surgeon-reviewer @medical-advisors
src/content/education/**/*operation* @surgeon-reviewer @medical-advisors
src/content/education/**/*procedure* @medical-advisors

# 涉及兒童健康的內容需要小兒科醫師審核
src/content/education/**/*child* @pediatrics-reviewer @medical-advisors
src/content/education/**/*infant* @pediatrics-reviewer @medical-advisors
src/content/education/**/*baby* @pediatrics-reviewer @medical-advisors

# 涉及心理健康的內容需要精神科醫師或心理師審核
src/content/education/**/*mental* @psychiatrist-reviewer @psychologist-reviewer @medical-advisors
src/content/education/**/*depression* @psychiatrist-reviewer @medical-advisors
src/content/education/**/*anxiety* @psychiatrist-reviewer @medical-advisors

# 緊急醫療內容需要急診科醫師審核
src/content/education/**/*emergency* @emergency-reviewer @medical-advisors
src/content/education/**/*first-aid* @emergency-reviewer @medical-advisors
src/content/education/**/*cpr* @emergency-reviewer @medical-advisors

# 營養相關內容需要營養師審核
