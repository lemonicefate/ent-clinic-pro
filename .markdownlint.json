{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,
  "MD001": true,
  "MD003": {
    "style": "atx"
  },
  "MD004": {
    "style": "dash"
  },
  "MD007": {
    "indent": 2,
    "start_indented": false
  },
  "MD009": {
    "br_spaces": 2,
    "list_item_empty_lines": false,
    "strict": false
  },
  "MD010": {
    "spaces_per_tab": 2
  },
  "MD012": {
    "maximum": 2
  },
  "MD013": {
    "line_length": 120,
    "heading_line_length": 80,
    "code_block_line_length": 120,
    "tables": false,
    "headings": true,
    "headers": true
  },
  "MD022": {
    "lines_above": 1,
    "lines_below": 1
  },
  "MD024": {
    "siblings_only": true
  },
  "MD025": {
    "front_matter_title": "^\\s*title\\s*[:=]"
  },
  "MD026": {
    "punctuation": ".,;:!?"
  },
  "MD029": {
    "style": "ordered"
  },
  "MD033": {
    "allowed_elements": [
      "br",
      "sub",
      "sup",
      "kbd",
      "mark",
      "details",
      "summary",
      "abbr",
      "cite",
      "time"
    ]
  },
  "MD034": true,
  "MD035": {
    "style": "---"
  },
  "MD036": false,
  "MD040": {
    "allowed_languages": [
      "javascript",
      "typescript",
      "html",
      "css",
      "json",
      "yaml",
      "markdown",
      "bash",
      "shell",
      "text",
      "plaintext"
    ],
    "language_only": false
  },
  "MD041": false,
  "MD044": {
    "names": [
      "JavaScript",
      "TypeScript",
      "HTML",
      "CSS",
      "JSON",
      "YAML",
      "Markdown",
      "GitHub",
      "Astro",
      "Node.js",
      "npm",
      "Cloudflare",
      "Decap CMS",
      "Netlify CMS"
    ],
    "code_blocks": false,
    "html_elements": false
  },
  "MD045": true,
  "MD046": {
    "style": "fenced"
  },
  "MD047": true,
  "MD048": {
    "style": "backtick"
  },
  "MD049": {
    "style": "asterisk"
  },
  "MD050": {
    "style": "asterisk"
  },
  "MD051": true,
  "MD052": true,
  "MD053": {
    "ignored_definitions": [
      "//",
      "comment"
    ]
  },
  "MD054": {
    "autolink": true,
    "inline": true,
    "full": true,
    "collapsed": true,
    "shortcut": true,
    "url_inline": true
  },
  "MD055": {
    "style": "leading_and_trailing"
  },
  "MD056": {
    "style": "leading_and_trailing"
  }
}