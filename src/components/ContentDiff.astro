---
// 內容變更比較組件
// 用於顯示文章內容的變更差異

export interface Props {
  originalContent?: string;
  newContent?: string;
  filename?: string;
  showLineNumbers?: boolean;
  highlightChanges?: boolean;
}

const { 
  originalContent = '', 
  newContent = '', 
  filename = '未知檔案',
  showLineNumbers = true,
  highlightChanges = true 
} = Astro.props;

// 簡單的差異計算函數
function calculateDiff(original: string, updated: string) {
  const originalLines = original.split('\n');
  const updatedLines = updated.split('\n');
  const diff = [];
  
  let i = 0, j = 0;
  
  while (i < originalLines.length || j < updatedLines.length) {
    if (i >= originalLines.length) {
      // 只有新內容
      diff.push({ type: 'added', content: updatedLines[j], lineNumber: j + 1 });
      j++;
    } else if (j >= updatedLines.length) {
      // 只有舊內容
      diff.push({ type: 'removed', content: originalLines[i], lineNumber: i + 1 });
      i++;
    } else if (originalLines[i] === updatedLines[j]) {
      // 相同內容
      diff.push({ type: 'unchanged', content: originalLines[i], lineNumber: i + 1 });
      i++;
      j++;
    } else {
      // 內容不同
      diff.push({ type: 'removed', content: originalLines[i], lineNumber: i + 1 });
      diff.push({ type: 'added', content: updatedLines[j], lineNumber: j + 1 });
      i++;
      j++;
    }
  }
  
  return diff;
}

const diffResult = calculateDiff(originalContent, newContent);
const stats = {
  added: diffResult.filter(line => line.type === 'added').length,
  removed: diffResult.filter(line => line.type === 'removed').length,
  unchanged: diffResult.filter(line => line.type === 'unchanged').length
};
---

<div class="content-diff">
  <div class="diff-header">
    <div class="file-info">
      <h3 class="filename">📄 {filename}</h3>
      <div class="diff-stats">
        <span class="stat added">+{stats.added}</span>
        <span class="stat removed">-{stats.removed}</span>
        <span class="stat unchanged">{stats.unchanged} 行未變更</span>
      </div>
    </div>
    
    <div class="diff-controls">
      <button class="control-btn" onclick="toggleLineNumbers()">
        📊 行號
      </button>
      <button class="control-btn" onclick="toggleWhitespace()">
        🔍 空白字元
      </button>
      <button class="control-btn" onclick="downloadDiff()">
        💾 下載差異
      </button>
    </div>
  </div>
  
  <div class="diff-content" id="diff-content">
    {diffResult.map((line, index) => (
      <div class={`diff-line ${line.type}`} data-line-number={line.lineNumber}>
        {showLineNumbers && (
          <span class="line-number">{line.lineNumber}</span>
        )}
        <span class="line-indicator">
          {line.type === 'added' ? '+' : line.type === 'removed' ? '-' : ' '}
        </span>
        <span class="line-content">{line.content || ' '}</span>
      </div>
    ))}
  </div>
  
  {diffResult.length === 0 && (
    <div class="no-changes">
      <p>📝 沒有檢測到內容變更</p>
    </div>
  )}
</div>

<style>
  .content-diff {
    border: 1px solid #e1e4e8;
    border-radius: 8px;
    overflow: hidden;
    font-family: 'SFMono-Regular', 'Monaco', 'Inconsolata', 'Liberation Mono', 'Courier New', monospace;
    background: #fff;
    margin: 20px 0;
  }
  
  .diff-header {
    background: #f6f8fa;
    border-bottom: 1px solid #e1e4e8;
    padding: 12px 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .file-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .filename {
    margin: 0;
    font-size: 14px;
    font-weight: 600;
    color: #24292e;
  }
  
  .diff-stats {
    display: flex;
    gap: 12px;
    font-size: 12px;
  }
  
  .stat {
    padding: 2px 6px;
    border-radius: 3px;
    font-weight: 500;
  }
  
  .stat.added {
    background: #d4edda;
    color: #155724;
  }
  
  .stat.removed {
    background: #f8d7da;
    color: #721c24;
  }
  
  .stat.unchanged {
    background: #e2e3e5;
    color: #495057;
  }
  
  .diff-controls {
    display: flex;
    gap: 8px;
  }
  
  .control-btn {
    background: #f6f8fa;
    border: 1px solid #d0d7de;
    border-radius: 6px;
    padding: 6px 12px;
    font-size: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  
  .control-btn:hover {
    background: #f3f4f6;
    border-color: #8c959f;
  }
  
  .diff-content {
    max-height: 600px;
    overflow-y: auto;
  }
  
  .diff-line {
    display: flex;
    align-items: center;
    min-height: 20px;
    font-size: 12px;
    line-height: 20px;
    border-left: 4px solid transparent;
  }
  
  .diff-line.added {
    background: #e6ffed;
    border-left-color: #28a745;
  }
  
  .diff-line.removed {
    background: #ffeef0;
    border-left-color: #d73a49;
  }
  
  .diff-line.unchanged {
    background: #fff;
  }
  
  .diff-line:hover {
    background-color: rgba(0, 0, 0, 0.04);
  }
  
  .line-number {
    width: 50px;
    padding: 0 8px;
    text-align: right;
    color: #656d76;
    background: #f6f8fa;
    border-right: 1px solid #e1e4e8;
    user-select: none;
    flex-shrink: 0;
  }
  
  .line-indicator {
    width: 20px;
    text-align: center;
    font-weight: bold;
    flex-shrink: 0;
  }
  
  .diff-line.added .line-indicator {
    color: #28a745;
  }
  
  .diff-line.removed .line-indicator {
    color: #d73a49;
  }
  
  .line-content {
    padding: 0 8px;
    white-space: pre-wrap;
    word-break: break-all;
    flex: 1;
  }
  
  .no-changes {
    padding: 40px;
    text-align: center;
    color: #656d76;
    background: #f6f8fa;
  }
  
  /* 響應式設計 */
  @media (max-width: 768px) {
    .diff-header {
      flex-direction: column;
      gap: 12px;
      align-items: flex-start;
    }
    
    .diff-controls {
      width: 100%;
      justify-content: space-between;
    }
    
    .control-btn {
      flex: 1;
      text-align: center;
    }
    
    .line-number {
      width: 35px;
      font-size: 10px;
    }
    
    .line-content {
      font-size: 11px;
    }
  }
  
  /* 列印樣式 */
  @media print {
    .diff-header {
      background: #fff;
      border-bottom: 2px solid #000;
    }
    
    .diff-controls {
      display: none;
    }
    
    .diff-line.added {
      background: #f0f0f0;
      border-left: 4px solid #000;
    }
    
    .diff-line.removed {
      background: #f0f0f0;
      border-left: 4px solid #000;
      text-decoration: line-through;
    }
  }
</style>

<script>
  // 切換行號顯示
  function toggleLineNumbers() {
    const lineNumbers = document.querySelectorAll('.line-number');
    const isVisible = lineNumbers[0]?.style.display !== 'none';
    
    lineNumbers.forEach(ln => {
      ln.style.display = isVisible ? 'none' : 'block';
    });
  }
  
  // 切換空白字元顯示
  function toggleWhitespace() {
    const diffContent = document.getElementById('diff-content');
    diffContent.classList.toggle('show-whitespace');
  }
  
  // 下載差異檔案
  function downloadDiff() {
    const diffLines = document.querySelectorAll('.diff-line');
    let diffText = '';
    
    diffLines.forEach(line => {
      const type = line.classList.contains('added') ? '+' : 
                   line.classList.contains('removed') ? '-' : ' ';
      const content = line.querySelector('.line-content').textContent;
      diffText += `${type}${content}\n`;
    });
    
    const blob = new Blob([diffText], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'content-diff.txt';
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
  }
  
  // 添加鍵盤快捷鍵
  document.addEventListener('keydown', function(e) {
    if (e.ctrlKey || e.metaKey) {
      switch(e.key) {
        case 'l':
          e.preventDefault();
          toggleLineNumbers();
          break;
        case 'w':
          e.preventDefault();
          toggleWhitespace();
          break;
        case 's':
          e.preventDefault();
          downloadDiff();
          break;
      }
    }
  });
</script>

<style is:global>
  .show-whitespace .line-content {
    white-space: pre;
  }
  
  .show-whitespace .line-content::before {
    content: '';
    background-image: 
      radial-gradient(circle, #ccc 1px, transparent 1px),
      linear-gradient(90deg, transparent 0%, transparent 50%, rgba(0,0,0,0.1) 50%, rgba(0,0,0,0.1) 100%);
    background-size: 8px 8px, 1ch 1ch;
    background-position: 0 0, 0 0;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: -1;
  }
</style>