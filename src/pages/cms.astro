---
/**
 * Content Management System - Protected route requiring write permissions
 * Demonstrates permission-based route protection
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import ProtectedRoute from '../components/ProtectedRoute.astro';
import RouteGuard from '../components/islands/RouteGuard.tsx';

const title = '內容管理系統 - 醫療平台';
const description = '醫療平台內容管理系統，需要寫入權限';

// Get user from middleware
const user = Astro.locals.user;
---

<BaseLayout title={title} description={description}>
  <main class="cms-page">
    <ProtectedRoute requireAuth={true} requiredPermissions={['write', 'manage_content']}>
      <RouteGuard client:load requireAuth={true} requiredPermissions={['write', 'manage_content']}>
        <div class="cms-container">
          <div class="cms-header">
            <h1 class="cms-title">
              <svg class="cms-icon" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
              </svg>
              內容管理系統
            </h1>
            <p class="cms-subtitle">管理醫療平台的內容和資源</p>
          </div>

          <div class="cms-grid">
            <div class="cms-card">
              <div class="card-header">
                <h3 class="card-title">
                  <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd"/>
                  </svg>
                  計算機管理
                </h3>
              </div>
              <div class="card-content">
                <p class="card-description">管理醫療計算機工具的配置和內容</p>
                <div class="card-stats">
                  <div class="stat-item">
                    <span class="stat-number">2</span>
                    <span class="stat-label">已發布</span>
                  </div>
                  <div class="stat-item">
                    <span class="stat-number">1</span>
                    <span class="stat-label">草稿</span>
                  </div>
                </div>
                <button class="btn btn-primary">管理計算機</button>
              </div>
            </div>

            <div class="cms-card">
              <div class="card-header">
                <h3 class="card-title">
                  <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-1H8v1a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
                  </svg>
                  衛教文章
                </h3>
              </div>
              <div class="card-content">
                <p class="card-description">編輯和管理醫療衛教文章內容</p>
                <div class="card-stats">
                  <div class="stat-item">
                    <span class="stat-number">5</span>
                    <span class="stat-label">已發布</span>
                  </div>
                  <div class="stat-item">
                    <span class="stat-number">3</span>
                    <span class="stat-label">草稿</span>
                  </div>
                </div>
                <button class="btn btn-primary">管理文章</button>
              </div>
            </div>

            <div class="cms-card">
              <div class="card-header">
                <h3 class="card-title">
                  <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L15.586 13H14a1 1 0 01-1-1z" clip-rule="evenodd"/>
                  </svg>
                  流程圖管理
                </h3>
              </div>
              <div class="card-content">
                <p class="card-description">創建和編輯醫療流程圖</p>
                <div class="card-stats">
                  <div class="stat-item">
                    <span class="stat-number">3</span>
                    <span class="stat-label">已發布</span>
                  </div>
                  <div class="stat-item">
                    <span class="stat-number">2</span>
                    <span class="stat-label">草稿</span>
                  </div>
                </div>
                <button class="btn btn-primary">管理流程圖</button>
              </div>
            </div>

            <div class="cms-card">
              <div class="card-header">
                <h3 class="card-title">
                  <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                  </svg>
                  媒體庫
                </h3>
              </div>
              <div class="card-content">
                <p class="card-description">管理圖片、影片和其他媒體資源</p>
                <div class="card-stats">
                  <div class="stat-item">
                    <span class="stat-number">24</span>
                    <span class="stat-label">圖片</span>
                  </div>
                  <div class="stat-item">
                    <span class="stat-number">8</span>
                    <span class="stat-label">影片</span>
                  </div>
                </div>
                <button class="btn btn-primary">管理媒體</button>
              </div>
            </div>
          </div>

          <div class="user-info-panel">
            <h2 class="panel-title">目前使用者資訊</h2>
            <div class="user-details">
              <p><strong>姓名:</strong> {user?.name}</p>
              <p><strong>電子郵件:</strong> {user?.email}</p>
              <p><strong>角色:</strong> {user?.role}</p>
              <p><strong>權限:</strong> {user?.permissions?.join(', ')}</p>
            </div>
          </div>
        </div>
      </RouteGuard>
    </ProtectedRoute>
  </main>
</BaseLayout>

<style>
  .cms-page {
    min-height: 100vh;
    background-color: #f8fafc;
    padding: 2rem 1rem;
  }

  .cms-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .cms-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .cms-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .cms-icon {
    width: 3rem;
    height: 3rem;
    color: #3b82f6;
  }

  .cms-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
  }

  .cms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .cms-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    border: 1px solid #e5e7eb;
    overflow: hidden;
  }

  .card-header {
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid #f3f4f6;
  }

  .card-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0;
  }

  .card-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #3b82f6;
  }

  .card-content {
    padding: 1rem 1.5rem 1.5rem;
  }

  .card-description {
    color: #6b7280;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .card-stats {
    display: flex;
    justify-content: space-around;
    margin-bottom: 1.5rem;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
    text-decoration: none;
    width: 100%;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .user-info-panel {
    background: white;
    border-radius: 12px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    border: 1px solid #e5e7eb;
    padding: 2rem;
  }

  .panel-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1.5rem;
  }

  .user-details p {
    margin-bottom: 0.75rem;
    color: #374151;
  }

  .user-details strong {
    color: #1f2937;
  }

  @media (max-width: 768px) {
    .cms-title {
      font-size: 2rem;
      flex-direction: column;
      gap: 0.5rem;
    }

    .cms-icon {
      width: 2.5rem;
      height: 2.5rem;
    }

    .cms-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>