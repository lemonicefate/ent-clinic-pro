---
/**
 * 內容管理儀表板頁面
 * 提供內容統計、狀態監控和管理工具
 * 
 * 更新日期：2025-01-30
 * 更新內容：新增內容管理儀表板頁面
 * 
 * 需求對應：
 * - 需求 6.1: 版本控制和追蹤系統 ✓
 * - 需求 6.2: 內容狀態指示器 ✓
 * - 需求 8.1: 內容統計和分析 ✓
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import ContentDashboard from '../../components/ContentDashboard.astro';
import { getCollection } from 'astro:content';
import type { SupportedLocale } from '../../env.d';

const locale: SupportedLocale = 'zh-TW';
const isDevelopment = import.meta.env.DEV;

// 如果不是開發環境，重定向到首頁
if (!isDevelopment) {
  return Astro.redirect('/');
}

// 獲取所有內容進行分析
const allEducation = await getCollection('education');
const allSpecialties = await getCollection('medical-specialties').catch(() => []);

// 計算快速統計
const quickStats = {
  totalArticles: allEducation.length,
  publishedArticles: allEducation.filter(e => e.data.status === 'published').length,
  inReviewArticles: allEducation.filter(e => e.data.status === 'in-review').length,
  draftArticles: allEducation.filter(e => e.data.status === 'draft').length,
  specialties: allSpecialties.length
};

// 計算最近活動
const recentActivity = allEducation
  .filter(e => e.data.lastUpdated)
  .sort((a, b) => new Date(b.data.lastUpdated).getTime() - new Date(a.data.lastUpdated).getTime())
  .slice(0, 10);

const pageTitle = '內容管理儀表板 - 開發環境';
const pageDescription = '內容管理統計、狀態監控和工作流程分析工具';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  locale={locale}
  pageType="admin"
>
  <div class="min-h-screen bg-gray-50">
    <!-- 頁面標頭 -->
    <div class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">內容管理儀表板</h1>
            <p class="text-gray-600 mt-2">監控內容狀態、工作流程和品質指標</p>
          </div>
          <div class="flex items-center space-x-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              🚧 開發環境
            </span>
            <a 
              href="/admin" 
              class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
            >
              <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              CMS 管理
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4 py-8">
      <!-- 快速統計卡片 -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-8">
        <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
          <div class="text-3xl font-bold text-blue-600 mb-2">
            {quickStats.totalArticles}
          </div>
          <div class="text-sm text-gray-600">總文章數</div>
        </div>
        
        <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
          <div class="text-3xl font-bold text-green-600 mb-2">
            {quickStats.publishedArticles}
          </div>
          <div class="text-sm text-gray-600">已發布</div>
          <div class="text-xs text-gray-400 mt-1">
            {Math.round((quickStats.publishedArticles / quickStats.totalArticles) * 100)}%
          </div>
        </div>
        
        <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
          <div class="text-3xl font-bold text-blue-600 mb-2">
            {quickStats.inReviewArticles}
          </div>
          <div class="text-sm text-gray-600">審核中</div>
        </div>
        
        <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
          <div class="text-3xl font-bold text-gray-600 mb-2">
            {quickStats.draftArticles}
          </div>
          <div class="text-sm text-gray-600">草稿</div>
        </div>
        
        <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
          <div class="text-3xl font-bold text-purple-600 mb-2">
            {quickStats.specialties}
          </div>
          <div class="text-sm text-gray-600">醫療專科</div>
        </div>
      </div>

      <!-- 主要儀表板 -->
      <div class="mb-8">
        <ContentDashboard locale={locale} showOnlyInDev={false} />
      </div>

      <!-- 最近活動 -->
      <div class="bg-white rounded-lg border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 flex items-center">
            <svg class="h-5 w-5 text-gray-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            最近活動
          </h3>
        </div>
        
        <div class="divide-y divide-gray-200">
          {recentActivity.map(entry => {
            const statusConfig = {
              published: { label: '已發布', color: 'text-green-600', bgColor: 'bg-green-100' },
              'in-review': { label: '審核中', color: 'text-blue-600', bgColor: 'bg-blue-100' },
              draft: { label: '草稿', color: 'text-gray-600', bgColor: 'bg-gray-100' },
              'needs-revision': { label: '需修改', color: 'text-yellow-600', bgColor: 'bg-yellow-100' },
              'quality-check': { label: '品質檢查', color: 'text-purple-600', bgColor: 'bg-purple-100' },
              'ready-to-publish': { label: '準備發布', color: 'text-orange-600', bgColor: 'bg-orange-100' }
            };
            
            const status = statusConfig[entry.data.status] || statusConfig.draft;
            
            return (
              <div key={entry.slug} class="px-6 py-4 hover:bg-gray-50">
                <div class="flex items-center justify-between">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center space-x-3 mb-2">
                      <span class={`inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium ${status.bgColor} ${status.color}`}>
                        {status.label}
                      </span>
                      <h4 class="text-sm font-medium text-gray-900 truncate">
                        {entry.data.title['zh-TW'] || entry.data.title}
                      </h4>
                    </div>
                    <div class="flex items-center space-x-4 text-xs text-gray-500">
                      <span>版本: {entry.data.version || '1.0'}</span>
                      <span>專科: {entry.data.medicalSpecialties.join(', ')}</span>
                      <span>更新: {new Date(entry.data.lastUpdated).toLocaleDateString('zh-TW')}</span>
                    </div>
                  </div>
                  <div class="flex items-center space-x-2">
                    <a 
                      href={`/education/${entry.slug}`}
                      class="text-sm text-blue-600 hover:text-blue-700 font-medium"
                    >
                      查看
                    </a>
                    <a 
                      href={`/admin#/collections/education/entries/${entry.slug}`}
                      class="text-sm text-gray-600 hover:text-gray-700"
                    >
                      編輯
                    </a>
                  </div>
                </div>
              </div>
            );
          })}
        </div>
        
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
          <a 
            href="/education" 
            class="text-sm text-blue-600 hover:text-blue-700 font-medium"
          >
            查看所有文章 →
          </a>
        </div>
      </div>

      <!-- 快速操作 -->
      <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h3 class="text-lg font-semibold text-blue-900 mb-4">快速操作</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <a 
            href="/admin"
            class="flex items-center p-4 bg-white rounded-lg border border-blue-200 hover:border-blue-300 transition-colors"
          >
            <svg class="h-8 w-8 text-blue-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <div>
              <div class="font-medium text-gray-900">編輯內容</div>
              <div class="text-sm text-gray-600">使用 CMS 編輯器</div>
            </div>
          </a>
          
          <a 
            href="/education"
            class="flex items-center p-4 bg-white rounded-lg border border-blue-200 hover:border-blue-300 transition-colors"
          >
            <svg class="h-8 w-8 text-blue-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
            <div>
              <div class="font-medium text-gray-900">瀏覽內容</div>
              <div class="text-sm text-gray-600">查看已發布文章</div>
            </div>
          </a>
          
          <a 
            href="/specialties"
            class="flex items-center p-4 bg-white rounded-lg border border-blue-200 hover:border-blue-300 transition-colors"
          >
            <svg class="h-8 w-8 text-blue-600 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
            <div>
              <div class="font-medium text-gray-900">專科管理</div>
              <div class="text-sm text-gray-600">查看專科統計</div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* 確保在開發環境中顯示所有內容 */
  .dev-only {
    display: block;
  }
</style>