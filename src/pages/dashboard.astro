---
/**
 * User Dashboard - Protected route for authenticated users
 * Demonstrates the protected route system
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import ProtectedRoute from '../components/ProtectedRoute.astro';
import RouteGuard from '../components/islands/RouteGuard.tsx';

const title = '使用者儀表板 - 醫療平台';
const description = '醫療平台使用者儀表板，提供個人化功能和工具存取';

// Get user from middleware
const user = Astro.locals.user;
const isAuthenticated = Astro.locals.isAuthenticated;
---

<BaseLayout title={title} description={description}>
  <main class="dashboard-page">
    <ProtectedRoute requireAuth={true}>
      <RouteGuard client:load requireAuth={true}>
        <div class="dashboard-container">
          <div class="dashboard-header">
            <h1 class="dashboard-title">
              <svg class="dashboard-icon" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
              </svg>
              使用者儀表板
            </h1>
            <p class="dashboard-subtitle">歡迎回來，{user?.name || '使用者'}</p>
          </div>

          <div class="dashboard-grid">
            <!-- User Info Card -->
            <div class="dashboard-card user-info-card">
              <div class="card-header">
                <h3 class="card-title">
                  <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                  </svg>
                  個人資訊
                </h3>
              </div>
              <div class="card-content">
                <div class="user-details">
                  <div class="user-avatar">
                    <span class="avatar-text">
                      {user?.name?.charAt(0).toUpperCase() || 'U'}
                    </span>
                  </div>
                  <div class="user-info">
                    <h4 class="user-name">{user?.name || '未知使用者'}</h4>
                    <p class="user-email">{user?.email || '未提供電子郵件'}</p>
                    <span class={`user-role role-${user?.role || 'user'}`}>
                      {user?.role === 'admin' ? '管理員' : '使用者'}
                    </span>
                  </div>
                </div>
                
                <div class="user-permissions">
                  <h5 class="permissions-title">權限</h5>
                  <div class="permissions-list">
                    {user?.permissions?.map((permission) => (
                      <span key={permission} class="permission-tag">
                        {permission}
                      </span>
                    )) || <span class="no-permissions">無特殊權限</span>}
                  </div>
                </div>
              </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="dashboard-card actions-card">
              <div class="card-header">
                <h3 class="card-title">
                  <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                  </svg>
                  快速操作
                </h3>
              </div>
              <div class="card-content">
                <div class="actions-grid">
                  <a href="/tools" class="action-item">
                    <svg class="action-icon" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd"/>
                    </svg>
                    <span>醫療工具</span>
                  </a>
                  
                  <a href="/education" class="action-item">
                    <svg class="action-icon" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>衛教資料</span>
                  </a>
                  
                  <a href="/search" class="action-item">
                    <svg class="action-icon" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
                    </svg>
                    <span>搜尋內容</span>
                  </a>
                  
                  {user?.role === 'admin' && (
                    <a href="/admin" class="action-item admin-action">
                      <svg class="action-icon" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
                      </svg>
                      <span>管理面板</span>
                    </a>
                  )}
                </div>
              </div>
            </div>

            <!-- Recent Activity Card -->
            <div class="dashboard-card activity-card">
              <div class="card-header">
                <h3 class="card-title">
                  <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                  最近活動
                </h3>
              </div>
              <div class="card-content">
                <div class="activity-list">
                  <div class="activity-item">
                    <div class="activity-icon">
                      <svg fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                    <div class="activity-content">
                      <p class="activity-title">使用 CHA₂DS₂-VASc 計算機</p>
                      <p class="activity-time">2 小時前</p>
                    </div>
                  </div>
                  
                  <div class="activity-item">
                    <div class="activity-icon">
                      <svg fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-1H8v1a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <div class="activity-content">
                      <p class="activity-title">閱讀高血壓管理指南</p>
                      <p class="activity-time">1 天前</p>
                    </div>
                  </div>
                  
                  <div class="activity-item">
                    <div class="activity-icon">
                      <svg fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                    <div class="activity-content">
                      <p class="activity-title">搜尋糖尿病相關資料</p>
                      <p class="activity-time">3 天前</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- System Status Card -->
            <div class="dashboard-card status-card">
              <div class="card-header">
                <h3 class="card-title">
                  <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                  </svg>
                  系統狀態
                </h3>
              </div>
              <div class="card-content">
                <div class="status-list">
                  <div class="status-item">
                    <span class="status-label">認證狀態:</span>
                    <span class="status-value status-online">已登入</span>
                  </div>
                  <div class="status-item">
                    <span class="status-label">會話狀態:</span>
                    <span class="status-value status-online">有效</span>
                  </div>
                  <div class="status-item">
                    <span class="status-label">權限檢查:</span>
                    <span class="status-value status-online">通過</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </RouteGuard>
    </ProtectedRoute>
  </main>
</BaseLayout>

<style>
  .dashboard-page {
    min-height: 100vh;
    background-color: #f8fafc;
    padding: 2rem 1rem;
  }

  .dashboard-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .dashboard-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .dashboard-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .dashboard-icon {
    width: 3rem;
    height: 3rem;
    color: #3b82f6;
  }

  .dashboard-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
  }

  .dashboard-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .dashboard-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    border: 1px solid #e5e7eb;
    overflow: hidden;
  }

  .card-header {
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid #f3f4f6;
  }

  .card-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0;
  }

  .card-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #3b82f6;
  }

  .card-content {
    padding: 1rem 1.5rem 1.5rem;
  }

  /* User Info Card */
  .user-details {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .user-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .avatar-text {
    color: white;
    font-weight: 600;
    font-size: 1.5rem;
  }

  .user-info {
    flex: 1;
  }

  .user-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.25rem;
  }

  .user-email {
    color: #6b7280;
    margin-bottom: 0.5rem;
  }

  .user-role {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .role-admin {
    background-color: #fef3c7;
    color: #92400e;
  }

  .role-user {
    background-color: #dbeafe;
    color: #1e40af;
  }

  .permissions-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #374151;
    margin-bottom: 0.75rem;
  }

  .permissions-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .permission-tag {
    padding: 0.25rem 0.5rem;
    background-color: #f3f4f6;
    color: #374151;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .no-permissions {
    color: #9ca3af;
    font-style: italic;
    font-size: 0.875rem;
  }

  /* Actions Card */
  .actions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .action-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem 1rem;
    background: #f8fafc;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    text-decoration: none;
    color: #374151;
    transition: all 0.2s ease-in-out;
  }

  .action-item:hover {
    background: #f1f5f9;
    border-color: #3b82f6;
    color: #3b82f6;
  }

  .action-item.admin-action {
    border-color: #fbbf24;
  }

  .action-item.admin-action:hover {
    border-color: #f59e0b;
    color: #f59e0b;
  }

  .action-icon {
    width: 2rem;
    height: 2rem;
    transition: color 0.2s ease-in-out;
  }

  .action-item span {
    font-size: 0.875rem;
    font-weight: 500;
    text-align: center;
  }

  /* Activity Card */
  .activity-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .activity-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem;
    background: #f8fafc;
    border-radius: 8px;
  }

  .activity-icon {
    width: 2rem;
    height: 2rem;
    color: #3b82f6;
    flex-shrink: 0;
  }

  .activity-icon svg {
    width: 100%;
    height: 100%;
  }

  .activity-content {
    flex: 1;
  }

  .activity-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: #1f2937;
    margin-bottom: 0.25rem;
  }

  .activity-time {
    font-size: 0.75rem;
    color: #9ca3af;
    margin: 0;
  }

  /* Status Card */
  .status-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .status-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .status-label {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .status-value {
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
  }

  .status-online {
    background-color: #d1fae5;
    color: #065f46;
  }

  @media (max-width: 768px) {
    .dashboard-title {
      font-size: 2rem;
      flex-direction: column;
      gap: 0.5rem;
    }

    .dashboard-icon {
      width: 2.5rem;
      height: 2.5rem;
    }

    .dashboard-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .user-details {
      flex-direction: column;
      text-align: center;
    }

    .actions-grid {
      grid-template-columns: 1fr;
    }
  }
</style>