---
/**
 * 兒童抗生素劑量計算器頁面
 * 專業的兒童抗生素劑量計算工具 - 使用新的插件系統
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import CalculatorContainer from '../../components/calculators/common/CalculatorContainer.tsx';
import SimplePediatricAntibioticCalculator from '../../components/calculators/modules/pediatric-antibiotic-calculator/SimplePediatricAntibiotic.tsx';
import type { SupportedLocale } from '../../types/calculator.js';

const locale: SupportedLocale = 'zh-TW';

// Static plugin metadata
const pluginMetadata = {
  id: 'pediatric-antibiotic-calculator',
  namespace: 'pediatrics',
  version: '1.0.0',
  name: {
    'zh-TW': '兒童抗生素劑量計算器',
    'en': 'Pediatric Antibiotic Dose Calculator',
    'ja': '小児抗生物質用量計算機'
  },
  description: {
    'zh-TW': '專業的兒童抗生素劑量計算工具，支援多種抗生素和抗病毒藥物的劑量計算',
    'en': 'Professional pediatric antibiotic dose calculation tool supporting multiple antibiotics and antiviral medications',
    'ja': '複数の抗生物質と抗ウイルス薬の用量計算をサポートする専門的な小児抗生物質用量計算ツール'
  },
  tags: ['pediatrics', 'antibiotics', 'antivirals', 'dose-calculation', 'infection']
};

const breadcrumbs = [
  { label: '首頁', href: '/' },
  { label: '醫療工具', href: '/tools' },
  { label: pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'] }
];

// 結構化資料
const structuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalRiskCalculator",
  "name": pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'],
  "description": pluginMetadata.description[locale] || pluginMetadata.description['zh-TW'],
  "url": `https://astro-clinical-platform.vercel.app/tools/pediatric-antibiotic-calculator`,
  "medicalSpecialty": "Pediatrics",
  "applicationCategory": "Medical Calculator",
  "operatingSystem": "Web Browser",
  "isAccessibleForFree": true,
  "creator": {
    "@type": "Organization",
    "name": "Astro Clinical Platform"
  }
};
---

<BaseLayout
  title={`${pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']} | Astro Clinical Platform`}
  description={pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
  locale={locale}
  medicalContent={true}
  pageType="calculator"
  contentId={pluginMetadata.id}
  specialty="小兒科"
  breadcrumbs={breadcrumbs}
>
  <main class="container mx-auto px-4 py-8">
    <!-- 計算機標題和描述 -->
    <div class="mb-8">
      <div class="flex items-center space-x-3 mb-4">
        <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center">
          <svg class="h-6 w-6 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 7.172V5L8 4z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            {pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']}
          </h1>
          <div class="flex items-center space-x-4 mt-2">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-pink-100 text-pink-800">
              {pluginMetadata.namespace}
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              中級
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              v{pluginMetadata.version}
            </span>
            {pluginMetadata.tags && pluginMetadata.tags.length > 0 && (
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                {pluginMetadata.tags.slice(0, 2).join(', ')}
              </span>
            )}
          </div>
        </div>
      </div>
      
      <p class="text-lg text-gray-600 leading-relaxed">
        {pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 計算機主體 - 使用 React 組件 -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <SimplePediatricAntibioticCalculator client:load locale={locale} />
        </div>
      </div>

      <!-- 側邊欄資訊 -->
      <div class="space-y-6">
        <!-- 支援的抗生素 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-pink-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            支援的抗生素
          </h2>
          <div class="space-y-2">
            <div class="text-sm text-gray-700">• Amoxicillin</div>
            <div class="text-sm text-gray-700">• Amoxicillin/Clavulanate</div>
            <div class="text-sm text-gray-700">• Azithromycin</div>
            <div class="text-sm text-gray-700">• Cephalexin</div>
            <div class="text-sm text-gray-700">• Clindamycin</div>
            <div class="text-sm text-gray-700">• Erythromycin</div>
            <div class="text-sm text-gray-700">• Trimethoprim/Sulfamethoxazole</div>
          </div>
        </div>

        <!-- 抗病毒藥物 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-purple-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            抗病毒藥物
          </h2>
          <div class="space-y-2">
            <div class="text-sm text-gray-700">• Acyclovir</div>
            <div class="text-sm text-gray-700">• Oseltamivir (Tamiflu)</div>
            <div class="text-sm text-gray-700">• Valacyclovir</div>
            <div class="text-sm text-gray-700">• Ribavirin</div>
          </div>
        </div>

        <!-- 年齡分組 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            年齡分組
          </h2>
          <div class="space-y-3">
            <div class="p-3 rounded-lg bg-blue-50 border-l-3 border-blue-500">
              <div class="text-sm font-medium text-blue-800">新生兒</div>
              <div class="text-sm text-blue-600 mt-1">0-28 天</div>
            </div>
            <div class="p-3 rounded-lg bg-green-50 border-l-3 border-green-500">
              <div class="text-sm font-medium text-green-800">嬰兒</div>
              <div class="text-sm text-green-600 mt-1">1 月 - 2 歲</div>
            </div>
            <div class="p-3 rounded-lg bg-yellow-50 border-l-3 border-yellow-500">
              <div class="text-sm font-medium text-yellow-800">兒童</div>
              <div class="text-sm text-yellow-600 mt-1">2-12 歲</div>
            </div>
            <div class="p-3 rounded-lg bg-purple-50 border-l-3 border-purple-500">
              <div class="text-sm font-medium text-purple-800">青少年</div>
              <div class="text-sm text-purple-600 mt-1">12-18 歲</div>
            </div>
          </div>
        </div>

        <!-- 安全提醒 -->
        <div class="bg-red-50 border border-red-200 rounded-lg p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
            <svg class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            安全提醒
          </h2>
          <ul class="text-sm text-gray-700 space-y-2">
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-red-500 rounded-full mt-2 mr-3"></span>
              必須確認過敏史
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-red-500 rounded-full mt-2 mr-3"></span>
              腎肝功能異常需調整劑量
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-red-500 rounded-full mt-2 mr-3"></span>
              注意藥物交互作用
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-red-500 rounded-full mt-2 mr-3"></span>
              遵循完整療程
            </li>
          </ul>
        </div>

        <!-- 相關工具 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
            相關工具
          </h2>
          <div class="space-y-3">
            <a href="/tools/amoxicillin-clavulanate-dose" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">Amoxicillin/Clavulanate 劑量計算器</div>
              <div class="text-xs text-gray-600 mt-1">專門的 Amoxicillin/Clavulanate 計算</div>
            </a>
            <a href="/tools/pediatric-fever" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">兒童發燒處理</div>
              <div class="text-xs text-gray-600 mt-1">退燒藥劑量計算</div>
            </a>
            <a href="/tools/pediatric-growth" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">兒童生長評估</div>
              <div class="text-xs text-gray-600 mt-1">身高體重百分位數</div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- 參考文獻 -->
    <div class="mt-12">
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
          <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          參考文獻
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              Pediatric Antimicrobial Dosing Guidelines
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              Pediatric Infectious Diseases Society
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>Journal of Pediatric Infectious Diseases</em> (2021)
            </p>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              Red Book: Report of the Committee on Infectious Diseases
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              American Academy of Pediatrics
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>32nd Edition</em> (2021)
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* 確保計算機在小螢幕上的可用性 */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
  
  /* 列印樣式 */
  @media print {
    .no-print {
      display: none !important;
    }
    
    .bg-white {
      background: white !important;
    }
    
    .border {
      border: 1px solid #e5e7eb !important;
    }
  }
  
  /* 確保計算器樣式正確載入 */
  .pediatric-antibiotic-calculator {
    min-height: 400px;
  }
  
  /* 響應式調整 */
  @media (max-width: 1024px) {
    .pediatric-antibiotic-calculator {
      min-height: 300px;
    }
  }
</style>

<script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>