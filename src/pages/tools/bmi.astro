---
/**
 * BMI 身體質量指數計算機頁面
 * 體重健康評估工具 - 使用新的插件系統
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import CalculatorContainer from '../../components/calculators/common/CalculatorContainer.tsx';
import type { SupportedLocale } from '../../types/calculator.js';

const locale: SupportedLocale = 'zh-TW';

// Static plugin metadata
const pluginMetadata = {
  id: 'bmi',
  namespace: 'general',
  version: '1.0.0',
  name: {
    'zh-TW': 'BMI 計算器',
    'en': 'BMI Calculator',
    'ja': 'BMI計算機'
  },
  description: {
    'zh-TW': '身體質量指數計算器，用於評估體重狀況和健康風險',
    'en': 'Body Mass Index calculator for assessing weight status and health risks',
    'ja': '体重状態と健康リスクを評価するためのボディマス指数計算機'
  },
  tags: ['general', 'bmi', 'weight', 'health']
};

const breadcrumbs = [
  { label: '首頁', href: '/' },
  { label: '醫療工具', href: '/tools' },
  { label: pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'] || 'BMI Calculator' }
];

// 結構化資料
const structuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalRiskCalculator",
  "name": pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'],
  "description": pluginMetadata.description[locale] || pluginMetadata.description['zh-TW'],
  "url": `https://astro-clinical-platform.vercel.app/tools/bmi`,
  "medicalSpecialty": "General Medicine",
  "applicationCategory": "Medical Calculator",
  "operatingSystem": "Web Browser",
  "isAccessibleForFree": true,
  "creator": {
    "@type": "Organization",
    "name": "Astro Clinical Platform"
  }
};
---

<BaseLayout 
  title={`${pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']} | Astro Clinical Platform`}
  description={pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
  locale={locale}
  medicalContent={true}
  pageType="calculator"
  contentId={pluginMetadata.id}
  specialty="一般醫學"
  breadcrumbs={breadcrumbs}
  structuredData={structuredData}
>
  <main class="container mx-auto px-4 py-8">
    <!-- 計算機標題和描述 -->
    <div class="mb-8">
      <div class="flex items-center space-x-3 mb-4">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
          <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            {pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']}
          </h1>
          <div class="flex items-center space-x-4 mt-2">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              {pluginMetadata.namespace}
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              基礎級
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              v{pluginMetadata.version}
            </span>
            {pluginMetadata.tags && pluginMetadata.tags.length > 0 && (
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                {pluginMetadata.tags.slice(0, 2).join(', ')}
              </span>
            )}
          </div>
        </div>
      </div>
      
      <p class="text-lg text-gray-600 leading-relaxed">
        {pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 計算機主體 - 使用新的插件系統 -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <CalculatorContainer 
            client:load
            calculatorId="bmi"
            locale={locale}
            className="bmi-calculator"
          />
        </div>
      </div>

      <!-- 側邊欄資訊 -->
      <div class="space-y-6">
        <!-- BMI 分類表 -->
        <div class="bg-white rounded-lg border border-medical-neutral-200 p-6">
          <h2 class="text-lg font-semibold text-medical-neutral-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-medical-success-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            BMI 分類標準
          </h2>
          <div class="space-y-3">
            <div class="flex items-center justify-between p-3 rounded-lg bg-red-50 border-l-3 border-red-500">
              <span class="text-sm font-medium text-red-800">體重不足</span>
              <span class="text-sm text-red-600">&lt; 18.5</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-green-50 border-l-3 border-green-500">
              <span class="text-sm font-medium text-green-800">正常體重</span>
              <span class="text-sm text-green-600">18.5 - 24.9</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-yellow-50 border-l-3 border-yellow-500">
              <span class="text-sm font-medium text-yellow-800">體重過重</span>
              <span class="text-sm text-yellow-600">25.0 - 29.9</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-orange-50 border-l-3 border-orange-500">
              <span class="text-sm font-medium text-orange-800">輕度肥胖</span>
              <span class="text-sm text-orange-600">30.0 - 34.9</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-red-50 border-l-3 border-red-500">
              <span class="text-sm font-medium text-red-800">中度肥胖</span>
              <span class="text-sm text-red-600">35.0 - 39.9</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-red-100 border-l-3 border-red-600">
              <span class="text-sm font-medium text-red-900">重度肥胖</span>
              <span class="text-sm text-red-700">≥ 40.0</span>
            </div>
          </div>
        </div>

        <!-- 健康風險 -->
        <div class="bg-white rounded-lg border border-medical-neutral-200 p-6">
          <h2 class="text-lg font-semibold text-medical-neutral-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-medical-warning-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            相關健康風險
          </h2>
          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium text-medical-neutral-800 mb-2">體重過重/肥胖相關風險：</h3>
              <ul class="text-sm text-medical-neutral-600 space-y-1">
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-warning-500 rounded-full mt-2 mr-3"></span>
                  第二型糖尿病
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-warning-500 rounded-full mt-2 mr-3"></span>
                  心血管疾病
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-warning-500 rounded-full mt-2 mr-3"></span>
                  高血壓
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-warning-500 rounded-full mt-2 mr-3"></span>
                  睡眠呼吸中止症
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-warning-500 rounded-full mt-2 mr-3"></span>
                  某些癌症
                </li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-sm font-medium text-medical-neutral-800 mb-2">體重不足相關風險：</h3>
              <ul class="text-sm text-medical-neutral-600 space-y-1">
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-error-500 rounded-full mt-2 mr-3"></span>
                  營養不良
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-error-500 rounded-full mt-2 mr-3"></span>
                  免疫力下降
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-error-500 rounded-full mt-2 mr-3"></span>
                  骨質疏鬆
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-medical-error-500 rounded-full mt-2 mr-3"></span>
                  生育問題
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- BMI 限制 -->
        <div class="bg-medical-neutral-50 border border-medical-neutral-200 rounded-lg p-6">
          <h2 class="text-lg font-semibold text-medical-neutral-900 mb-3 flex items-center">
            <svg class="h-5 w-5 text-medical-neutral-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            BMI 的限制
          </h2>
          <ul class="text-sm text-medical-neutral-700 space-y-2">
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-medical-neutral-500 rounded-full mt-2 mr-3"></span>
              不區分肌肉和脂肪組織
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-medical-neutral-500 rounded-full mt-2 mr-3"></span>
              不反映脂肪分布位置
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-medical-neutral-500 rounded-full mt-2 mr-3"></span>
              可能不適用於運動員
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-medical-neutral-500 rounded-full mt-2 mr-3"></span>
              年齡和種族差異影響
            </li>
          </ul>
        </div>

        <!-- 相關工具 -->
        <div class="bg-white rounded-lg border border-medical-neutral-200 p-6">
          <h2 class="text-lg font-semibold text-medical-neutral-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-medical-primary-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
            相關工具
          </h2>
          <div class="space-y-3">
            <a href="/tools/body-fat" class="block p-3 rounded-lg border border-medical-neutral-200 hover:border-medical-primary-300 hover:bg-medical-primary-50 transition-colors">
              <div class="font-medium text-medical-neutral-900 text-sm">體脂率計算機</div>
              <div class="text-xs text-medical-neutral-600 mt-1">更精確的身體組成評估</div>
            </a>
            <a href="/tools/waist-hip-ratio" class="block p-3 rounded-lg border border-medical-neutral-200 hover:border-medical-primary-300 hover:bg-medical-primary-50 transition-colors">
              <div class="font-medium text-medical-neutral-900 text-sm">腰臀比計算機</div>
              <div class="text-xs text-medical-neutral-600 mt-1">評估腹部肥胖風險</div>
            </a>
            <a href="/tools/ideal-weight" class="block p-3 rounded-lg border border-medical-neutral-200 hover:border-medical-primary-300 hover:bg-medical-primary-50 transition-colors">
              <div class="font-medium text-medical-neutral-900 text-sm">理想體重計算機</div>
              <div class="text-xs text-medical-neutral-600 mt-1">計算理想體重範圍</div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- 健康建議 -->
    <div class="mt-12">
      <div class="bg-white rounded-lg border border-medical-neutral-200 p-8">
        <h2 class="text-2xl font-semibold text-medical-neutral-900 mb-6 text-center">
          維持健康體重的建議
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-medical-success-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-8 w-8 text-medical-success-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-medical-neutral-900 mb-2">
              均衡飲食
            </h3>
            <p class="text-medical-neutral-600 text-sm">
              攝取多樣化的營養素，控制熱量攝入，避免過度節食
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-medical-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-8 w-8 text-medical-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-medical-neutral-900 mb-2">
              規律運動
            </h3>
            <p class="text-medical-neutral-600 text-sm">
              每週至少 150 分鐘中等強度運動，結合有氧和肌力訓練
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-medical-warning-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="h-8 w-8 text-medical-warning-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-medical-neutral-900 mb-2">
              定期監測
            </h3>
            <p class="text-medical-neutral-600 text-sm">
              定期測量體重和 BMI，及早發現體重變化趨勢
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- 參考文獻 -->
    <div class="mt-12">
      <div class="bg-white rounded-lg border border-medical-neutral-200 p-6">
        <h2 class="text-xl font-semibold text-medical-neutral-900 mb-6 flex items-center">
          <svg class="h-5 w-5 text-medical-primary-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          參考文獻
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="border border-medical-neutral-200 rounded-lg p-4">
            <h3 class="font-medium text-medical-neutral-900 mb-2 leading-tight">
              Body mass index: obesity classification and risk of coronary heart disease
            </h3>
            <p class="text-sm text-medical-neutral-600 mb-2">
              Willett WC, Dietz WH, Colditz GA
            </p>
            <p class="text-sm text-medical-neutral-500 mb-3">
              <em>American Journal of Medicine</em> (1999)
            </p>
          </div>
          
          <div class="border border-medical-neutral-200 rounded-lg p-4">
            <h3 class="font-medium text-medical-neutral-900 mb-2 leading-tight">
              WHO Expert Committee on Physical Status
            </h3>
            <p class="text-sm text-medical-neutral-600 mb-2">
              World Health Organization
            </p>
            <p class="text-sm text-medical-neutral-500 mb-3">
              <em>WHO Technical Report Series</em> (1995)
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* 確保計算機在小螢幕上的可用性 */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
  
  /* 列印樣式 */
  @media print {
    .no-print {
      display: none !important;
    }
    
    .bg-white {
      background: white !important;
    }
    
    .border {
      border: 1px solid #e5e7eb !important;
    }
  }
</style>