---
// 測試 PluginCalculator 組件
import PluginCalculator from '../../components/islands/PluginCalculator.tsx';
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>插件計算器測試</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 0; padding: 20px; background: #f9fafb; }
    .container { max-width: 1200px; margin: 0 auto; }
    h1 { font-size: 2rem; font-weight: bold; color: #111827; margin-bottom: 2rem; }
    h2 { font-size: 1.5rem; font-weight: 600; color: #1f2937; margin-bottom: 1rem; }
    .bg-white { background: white; }
    .rounded-lg { border-radius: 0.5rem; }
    .border { border: 1px solid #e5e7eb; }
    .p-6 { padding: 1.5rem; }
    .mb-12 { margin-bottom: 3rem; }
  </style>
</head>
<body class="bg-gray-50">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">插件計算器測試</h1>
    
    <!-- BMI 計算器測試 -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">BMI 計算器</h2>
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <PluginCalculator 
          pluginId="general.bmi"
          locale="zh-TW"
          client:load
        />
      </div>
    </div>
    
    <!-- eGFR 計算器測試 -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">eGFR 計算器</h2>
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <PluginCalculator 
          pluginId="nephrology.egfr"
          locale="zh-TW"
          client:load
        />
      </div>
    </div>
    
    <!-- CHA2DS2-VASc 計算器測試 -->
    <div class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">CHA2DS2-VASc 評分</h2>
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <PluginCalculator 
          pluginId="cardiology.cha2ds2-vasc"
          locale="zh-TW"
          client:load
        />
      </div>
    </div>
  </div>
</body>
</html>