---
/**
 * CHA₂DS₂-VASc 評分頁面
 * 評估心房顫動患者中風風險的臨床評分工具
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import CalculatorContainer from '../../components/calculators/common/CalculatorContainer.tsx';
import SimpleCHA2DS2VAScCalculator from '../../components/calculators/modules/cha2ds2-vasc/SimpleCHA2DS2VASc.tsx';
import type { SupportedLocale } from '../../types/calculator.js';

const locale: SupportedLocale = 'zh-TW';

// Static plugin metadata
const pluginMetadata = {
  id: 'cha2ds2-vasc',
  namespace: 'cardiology',
  version: '1.0.0',
  name: {
    'zh-TW': 'CHA₂DS₂-VASc 評分',
    'en': 'CHA₂DS₂-VASc Score',
    'ja': 'CHA₂DS₂-VAScスコア'
  },
  description: {
    'zh-TW': '評估心房顫動患者中風風險的臨床評分工具',
    'en': 'Clinical scoring tool for assessing stroke risk in atrial fibrillation patients',
    'ja': '心房細動患者の脳卒中リスクを評価する臨床スコアリングツール'
  },
  tags: ['cardiology', 'stroke-risk', 'atrial-fibrillation', 'anticoagulation']
};

const breadcrumbs = [
  { label: '首頁', href: '/' },
  { label: '醫療工具', href: '/tools' },
  { label: pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'] }
];

// 結構化資料
const structuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalRiskCalculator",
  "name": pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'],
  "description": pluginMetadata.description[locale] || pluginMetadata.description['zh-TW'],
  "url": `https://astro-clinical-platform.vercel.app/tools/cha2ds2-vasc`,
  "medicalSpecialty": "Cardiology",
  "applicationCategory": "Medical Calculator",
  "operatingSystem": "Web Browser",
  "isAccessibleForFree": true,
  "creator": {
    "@type": "Organization",
    "name": "Astro Clinical Platform"
  }
};
---

<BaseLayout
  title={`${pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']} | Astro Clinical Platform`}
  description={pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
  locale={locale}
  medicalContent={true}
  pageType="calculator"
  contentId={pluginMetadata.id}
  specialty="心臟科"
  breadcrumbs={breadcrumbs}
>
  <main class="container mx-auto px-4 py-8">
    <!-- 計算機標題和描述 -->
    <div class="mb-8">
      <div class="flex items-center space-x-3 mb-4">
        <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
          <svg class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            {pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']}
          </h1>
          <div class="flex items-center space-x-4 mt-2">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
              {pluginMetadata.namespace}
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              中級
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              v{pluginMetadata.version}
            </span>
            {pluginMetadata.tags && pluginMetadata.tags.length > 0 && (
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                {pluginMetadata.tags.slice(0, 2).join(', ')}
              </span>
            )}
          </div>
        </div>
      </div>
      
      <p class="text-lg text-gray-600 leading-relaxed">
        {pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 計算機主體 - 使用 React 組件 -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <SimpleCHA2DS2VAScCalculator client:load locale={locale} />
        </div>
      </div>

      <!-- 側邊欄資訊 -->
      <div class="space-y-6">
        <!-- 評分項目 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            評分項目
          </h2>
          <div class="space-y-3">
            <div class="flex justify-between items-center p-2 rounded bg-gray-50">
              <span class="text-sm font-medium">充血性心衰竭 (C)</span>
              <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">1分</span>
            </div>
            <div class="flex justify-between items-center p-2 rounded bg-gray-50">
              <span class="text-sm font-medium">高血壓 (H)</span>
              <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">1分</span>
            </div>
            <div class="flex justify-between items-center p-2 rounded bg-gray-50">
              <span class="text-sm font-medium">年齡 ≥75 歲 (A₂)</span>
              <span class="text-xs bg-orange-100 text-orange-800 px-2 py-1 rounded">2分</span>
            </div>
            <div class="flex justify-between items-center p-2 rounded bg-gray-50">
              <span class="text-sm font-medium">糖尿病 (D)</span>
              <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">1分</span>
            </div>
            <div class="flex justify-between items-center p-2 rounded bg-gray-50">
              <span class="text-sm font-medium">中風史 (S₂)</span>
              <span class="text-xs bg-red-100 text-red-800 px-2 py-1 rounded">2分</span>
            </div>
            <div class="flex justify-between items-center p-2 rounded bg-gray-50">
              <span class="text-sm font-medium">血管疾病 (V)</span>
              <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">1分</span>
            </div>
            <div class="flex justify-between items-center p-2 rounded bg-gray-50">
              <span class="text-sm font-medium">年齡 65-74 歲 (A)</span>
              <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">1分</span>
            </div>
            <div class="flex justify-between items-center p-2 rounded bg-gray-50">
              <span class="text-sm font-medium">女性 (Sc)</span>
              <span class="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded">1分</span>
            </div>
          </div>
        </div>

        <!-- 風險分層 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-orange-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            風險分層
          </h2>
          <div class="space-y-3">
            <div class="p-3 rounded-lg bg-green-50 border-l-3 border-green-500">
              <div class="text-sm font-medium text-green-800">低風險 (0 分)</div>
              <div class="text-sm text-green-600 mt-1">年中風率: 0%</div>
            </div>
            <div class="p-3 rounded-lg bg-yellow-50 border-l-3 border-yellow-500">
              <div class="text-sm font-medium text-yellow-800">中風險 (1 分)</div>
              <div class="text-sm text-yellow-600 mt-1">年中風率: 1.3%</div>
            </div>
            <div class="p-3 rounded-lg bg-red-50 border-l-3 border-red-500">
              <div class="text-sm font-medium text-red-800">高風險 (≥2 分)</div>
              <div class="text-sm text-red-600 mt-1">年中風率: 2.2-17.6%</div>
            </div>
          </div>
        </div>

        <!-- 治療建議 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-purple-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 7.172V5L8 4z" />
            </svg>
            治療建議
          </h2>
          <div class="space-y-3">
            <div class="p-3 rounded-lg bg-green-50">
              <div class="text-sm font-medium text-green-800">0 分</div>
              <div class="text-sm text-green-600 mt-1">不建議抗凝治療</div>
            </div>
            <div class="p-3 rounded-lg bg-yellow-50">
              <div class="text-sm font-medium text-yellow-800">1 分</div>
              <div class="text-sm text-yellow-600 mt-1">考慮抗凝治療</div>
            </div>
            <div class="p-3 rounded-lg bg-red-50">
              <div class="text-sm font-medium text-red-800">≥2 分</div>
              <div class="text-sm text-red-600 mt-1">建議抗凝治療</div>
            </div>
          </div>
        </div>

        <!-- 相關工具 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
            相關工具
          </h2>
          <div class="space-y-3">
            <a href="/tools/has-bled" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">HAS-BLED 評分</div>
              <div class="text-xs text-gray-600 mt-1">出血風險評估</div>
            </a>
            <a href="/tools/lipid-management" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">血脂管理計算機</div>
              <div class="text-xs text-gray-600 mt-1">心血管風險評估</div>
            </a>
            <a href="/tools/framingham-risk" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">Framingham 風險評分</div>
              <div class="text-xs text-gray-600 mt-1">10年心血管風險</div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- 參考文獻 -->
    <div class="mt-12">
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
          <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          參考文獻
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              2020 ESC Guidelines for Atrial Fibrillation
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              European Society of Cardiology
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>European Heart Journal</em> (2020)
            </p>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              2019 AHA/ACC/HRS Guidelines for Atrial Fibrillation
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              American Heart Association
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>Circulation</em> (2019)
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* 確保計算機在小螢幕上的可用性 */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
  
  /* 列印樣式 */
  @media print {
    .no-print {
      display: none !important;
    }
    
    .bg-white {
      background: white !important;
    }
    
    .border {
      border: 1px solid #e5e7eb !important;
    }
  }
</style>

<script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>