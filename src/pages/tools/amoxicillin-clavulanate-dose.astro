---
/**
 * 兒童 Amoxicillin/Clavulanate 劑量計算器頁面
 * 專業的兒童 Amoxicillin/Clavulanate 劑量計算工具
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import SimpleAmoxicillinClavulanateCalculator from '../../components/calculators/modules/amoxicillin-clavulanate-dose/SimpleAmoxicillinClavulanate.tsx';
import type { SupportedLocale } from '../../types/calculator.js';

const locale: SupportedLocale = 'zh-TW';

// Static plugin metadata
const pluginMetadata = {
  id: 'amoxicillin-clavulanate-dose',
  namespace: 'pediatrics',
  version: '1.0.0',
  name: {
    'zh-TW': '兒童 Amoxicillin/Clavulanate 劑量計算器',
    'en': 'Pediatric Amoxicillin/Clavulanate Dose Calculator',
    'ja': '小児用アモキシシリン/クラブラン酸用量計算機'
  },
  description: {
    'zh-TW': '根據兒童體重與治療目標，智能計算最佳 Amoxicillin/Clavulanate 藥錠組合',
    'en': 'Calculate optimal Amoxicillin/Clavulanate tablet combinations for pediatric patients',
    'ja': '小児患者に最適なアモキシシリン/クラブラン酸錠剤の組み合わせを計算'
  },
  tags: ['pediatrics', 'antibiotics', 'amoxicillin', 'dose-calculation']
};

const breadcrumbs = [
  { label: '首頁', href: '/' },
  { label: '醫療工具', href: '/tools' },
  { label: pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'] }
];

// 結構化資料
const structuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalRiskCalculator",
  "name": pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'],
  "description": pluginMetadata.description[locale] || pluginMetadata.description['zh-TW'],
  "url": `https://astro-clinical-platform.vercel.app/tools/amoxicillin-clavulanate-dose`,
  "medicalSpecialty": "Pediatrics",
  "applicationCategory": "Medical Calculator",
  "operatingSystem": "Web Browser",
  "isAccessibleForFree": true,
  "creator": {
    "@type": "Organization",
    "name": "Astro Clinical Platform"
  }
};
---

<BaseLayout
  title={`${pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']} | Astro Clinical Platform`}
  description={pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
  locale={locale}
  medicalContent={true}
  pageType="calculator"
  contentId={pluginMetadata.id}
  specialty="小兒科"
  breadcrumbs={breadcrumbs}
>
  <main class="container mx-auto px-4 py-8">
    <!-- 計算機標題和描述 -->
    <div class="mb-8">
      <div class="flex items-center space-x-3 mb-4">
        <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center">
          <svg class="h-6 w-6 text-pink-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 7.172V5L8 4z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            {pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']}
          </h1>
          <div class="flex items-center space-x-4 mt-2">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-pink-100 text-pink-800">
              {pluginMetadata.namespace}
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              中級
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              v{pluginMetadata.version}
            </span>
            {pluginMetadata.tags && pluginMetadata.tags.length > 0 && (
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                {pluginMetadata.tags.slice(0, 2).join(', ')}
              </span>
            )}
          </div>
        </div>
      </div>
      
      <p class="text-lg text-gray-600 leading-relaxed">
        {pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 計算機主體 - 使用 React 組件 -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <SimpleAmoxicillinClavulanateCalculator client:load locale={locale} />
        </div>
      </div>

      <!-- 側邊欄資訊 -->
      <div class="space-y-6">
        <!-- 使用說明 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            使用說明
          </h2>
          <div class="space-y-3 text-sm">
            <div>
              <h3 class="font-semibold text-gray-800 mb-1">1. 輸入體重</h3>
              <p class="text-gray-600">請輸入兒童的體重（公斤）</p>
            </div>
            <div>
              <h3 class="font-semibold text-gray-800 mb-1">2. 選擇治療目標</h3>
              <p class="text-gray-600">選擇輕度或重度感染治療</p>
            </div>
            <div>
              <h3 class="font-semibold text-gray-800 mb-1">3. 查看建議</h3>
              <p class="text-gray-600">系統會計算最佳藥錠組合</p>
            </div>
          </div>
        </div>

        <!-- 藥錠規格 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            支援藥錠規格
          </h2>
          <div class="space-y-2">
            <div class="text-sm text-gray-700">• 250/62.5 mg</div>
            <div class="text-sm text-gray-700">• 500/125 mg</div>
            <div class="text-sm text-gray-700">• 875/125 mg</div>
            <div class="text-sm text-gray-700">• 1000/62.5 mg</div>
          </div>
        </div>

        <!-- 治療目標 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-purple-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            治療目標
          </h2>
          <div class="space-y-3">
            <div class="p-3 rounded-lg bg-green-50 border-l-3 border-green-500">
              <div class="text-sm font-medium text-green-800">輕度感染</div>
              <div class="text-sm text-green-600 mt-1">45 mg/kg/day</div>
            </div>
            <div class="p-3 rounded-lg bg-orange-50 border-l-3 border-orange-500">
              <div class="text-sm font-medium text-orange-800">重度感染</div>
              <div class="text-sm text-orange-600 mt-1">90 mg/kg/day</div>
            </div>
          </div>
        </div>

        <!-- 適應症 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-red-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            常見適應症
          </h2>
          <div class="space-y-2">
            <div class="text-sm text-gray-700">• 急性中耳炎</div>
            <div class="text-sm text-gray-700">• 鼻竇炎</div>
            <div class="text-sm text-gray-700">• 社區型肺炎</div>
            <div class="text-sm text-gray-700">• 皮膚軟組織感染</div>
            <div class="text-sm text-gray-700">• 泌尿道感染</div>
          </div>
        </div>

        <!-- 安全提醒 -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <h2 class="text-lg font-semibold text-yellow-800 mb-3 flex items-center">
            <svg class="h-5 w-5 text-yellow-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            安全提醒
          </h2>
          <ul class="text-sm text-yellow-700 space-y-2">
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-yellow-500 rounded-full mt-2 mr-3"></span>
              確認青黴素過敏史
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-yellow-500 rounded-full mt-2 mr-3"></span>
              隨餐服用減少胃腸不適
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-yellow-500 rounded-full mt-2 mr-3"></span>
              完成完整療程
            </li>
          </ul>
        </div>

        <!-- 相關工具 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
            相關工具
          </h2>
          <div class="space-y-3">
            <a href="/tools/pediatric-antibiotic-calculator" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">兒童抗生素劑量計算器</div>
              <div class="text-xs text-gray-600 mt-1">多種抗生素劑量計算</div>
            </a>
            <a href="/tools/pediatric-fever" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">兒童發燒處理</div>
              <div class="text-xs text-gray-600 mt-1">退燒藥劑量計算</div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- 參考文獻 -->
    <div class="mt-12">
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
          <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          參考文獻
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              Pediatric Dosage Handbook
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              Lexicomp
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>28th Edition</em> (2021)
            </p>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              Nelson Textbook of Pediatrics
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              Kliegman et al.
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>21st Edition</em> (2020)
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* 確保計算機在小螢幕上的可用性 */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
  
  /* 列印樣式 */
  @media print {
    .no-print {
      display: none !important;
    }
    
    .bg-white {
      background: white !important;
    }
    
    .border {
      border: 1px solid #e5e7eb !important;
    }
  }
</style>

<script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>