{
  "$schema": "./config.schema.json",
  "id": "template-calculator",
  "name": {
    "zh-TW": "計算機模板",
    "en": "Calculator Template"
  },
  "description": {
    "zh-TW": "這是一個計算機模組的模板，用於創建新的醫療計算機",
    "en": "This is a template for creating new medical calculator modules"
  },
  "category": "template",
  "version": "1.0.0",
  "status": "draft",
  
  "fields": [
    {
      "id": "input1",
      "type": "number",
      "label": {
        "zh-TW": "輸入值 1",
        "en": "Input Value 1"
      },
      "placeholder": {
        "zh-TW": "請輸入數值",
        "en": "Enter a number"
      },
      "helpText": {
        "zh-TW": "這是第一個輸入欄位的說明",
        "en": "This is the help text for the first input field"
      },
      "required": true,
      "min": 0,
      "max": 1000,
      "step": 0.1,
      "unit": "單位",
      "validation": {
        "pattern": "^[0-9]+(\\.[0-9]+)?$",
        "errorMessage": {
          "zh-TW": "請輸入有效的數值",
          "en": "Please enter a valid number"
        }
      }
    },
    {
      "id": "input2",
      "type": "select",
      "label": {
        "zh-TW": "選擇選項",
        "en": "Select Option"
      },
      "required": true,
      "options": [
        {
          "value": "option1",
          "label": {
            "zh-TW": "選項 1",
            "en": "Option 1"
          }
        },
        {
          "value": "option2",
          "label": {
            "zh-TW": "選項 2",
            "en": "Option 2"
          }
        }
      ]
    }
  ],
  
  "calculation": {
    "functionName": "calculate",
    "validationRules": {
      "required": ["input1", "input2"],
      "dependencies": []
    }
  },
  
  "interpretation": [
    {
      "condition": "result < 10",
      "level": "low",
      "message": {
        "zh-TW": "結果偏低",
        "en": "Result is low"
      },
      "recommendations": [
        {
          "zh-TW": "建議進行進一步檢查",
          "en": "Further examination is recommended"
        }
      ]
    },
    {
      "condition": "result >= 10 && result < 20",
      "level": "moderate",
      "message": {
        "zh-TW": "結果正常",
        "en": "Result is normal"
      },
      "recommendations": [
        {
          "zh-TW": "維持現狀",
          "en": "Maintain current status"
        }
      ]
    },
    {
      "condition": "result >= 20",
      "level": "high",
      "message": {
        "zh-TW": "結果偏高",
        "en": "Result is high"
      },
      "recommendations": [
        {
          "zh-TW": "建議諮詢醫師",
          "en": "Consult with physician"
        }
      ]
    }
  ],
  
  "visualization": {
    "resultDisplay": {
      "type": "dashboard",
      "layout": "grid",
      "components": [
        {
          "id": "primary-result",
          "type": "result-card",
          "title": {
            "zh-TW": "計算結果",
            "en": "Calculation Result"
          },
          "position": {
            "row": 1,
            "col": 1,
            "span": 2
          },
          "config": {
            "valueKey": "primaryValue",
            "format": "number",
            "precision": 2,
            "showUnit": true,
            "colorScheme": "risk-based"
          }
        },
        {
          "id": "risk-indicator",
          "type": "risk-indicator",
          "position": {
            "row": 2,
            "col": 1
          },
          "config": {
            "riskKey": "riskLevel",
            "style": "badge",
            "thresholds": [
              {
                "min": 0,
                "max": 10,
                "level": "low",
                "color": "#22c55e",
                "label": {
                  "zh-TW": "低風險",
                  "en": "Low Risk"
                }
              },
              {
                "min": 10,
                "max": 20,
                "level": "moderate",
                "color": "#f59e0b",
                "label": {
                  "zh-TW": "中等風險",
                  "en": "Moderate Risk"
                }
              },
              {
                "min": 20,
                "max": 100,
                "level": "high",
                "color": "#ef4444",
                "label": {
                  "zh-TW": "高風險",
                  "en": "High Risk"
                }
              }
            ]
          }
        }
      ]
    }
  },
  
  "medical": {
    "specialty": ["general"],
    "evidenceLevel": "C",
    "references": [
      {
        "title": "Template Reference",
        "authors": ["Template Author"],
        "journal": "Template Journal",
        "year": 2024,
        "url": "https://example.com/template-reference",
        "doi": "10.1000/template"
      }
    ],
    "clinicalGuidelines": {
      "zh-TW": "這是臨床指引的模板內容",
      "en": "This is template content for clinical guidelines"
    }
  },
  
  "metadata": {
    "tags": ["template", "example"],
    "difficulty": "basic",
    "lastUpdated": "2024-01-26",
    "author": "Template Author",
    "reviewedBy": "Template Reviewer"
  }
}