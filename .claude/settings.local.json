{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git commit:*)",
      "Bash(ls:*)",
      "Bash(robocopy:*)",
      "Bash(mv:*)",
      "Bash(rsync:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(npx @playwright/mcp@latest:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "fetch",
    "Context7",
    "playwright",
    "serena"
  ]
}