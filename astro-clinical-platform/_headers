# Cloudflare Pages 安全標頭設定

/*
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://plausible.io https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://plausible.io https://cloudflareinsights.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self';
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Medical-Platform: true

# 靜態資源快取
/assets/*
  Cache-Control: public, max-age=31536000, immutable

/_astro/*
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

/*.ttf
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=86400

# HTML 檔案不快取
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# API 路由
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  X-Medical-API: true

# 醫療內容特殊處理
/tools/*
  X-Medical-Content: calculator
  Cache-Control: public, max-age=3600, must-revalidate

/education/*
  X-Medical-Content: education
  Cache-Control: public, max-age=3600, must-revalidate

# Pagefind 搜尋檔案
/pagefind/*
  Cache-Control: public, max-age=86400

# 網站地圖和 robots
/sitemap*.xml
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400

# 多語言內容
/zh-TW/*
  Content-Language: zh-TW
  X-Medical-Language: zh-TW

/en/*
  Content-Language: en
  X-Medical-Language: en

/ja/*
  Content-Language: ja
  X-Medical-Language: ja