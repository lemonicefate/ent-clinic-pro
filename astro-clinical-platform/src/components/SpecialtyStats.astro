---
/**
 * 專科統計組件
 * 顯示專科相關的文章和工具統計資訊
 * 
 * 更新日期：2025-01-30
 * 更新內容：新增 SOP 工作流程統計支援
 * 
 * 需求對應：
 * - 需求 1.3: 專科分類顯示文章統計 ✓
 * - 需求 8.1: 效能監控和分析 ✓
 */

interface Props {
  specialtyName: string;
  stats: {
    total: number;
    published: number;
    inReview: number;
    draft: number;
    needsRevision: number;
    qualityCheck: number;
    readyToPublish: number;
  };
  calculatorCount: number;
  showWorkflowStats?: boolean;
}

const {
  specialtyName,
  stats,
  calculatorCount,
  showWorkflowStats = false
} = Astro.props;

const isDevelopment = import.meta.env.DEV;

// 計算統計百分比
const publishedPercentage = stats.total > 0 ? Math.round((stats.published / stats.total) * 100) : 0;
const inProgressCount = stats.inReview + stats.qualityCheck + stats.readyToPublish;
const inProgressPercentage = stats.total > 0 ? Math.round((inProgressCount / stats.total) * 100) : 0;

// 工作流程統計配置
const workflowStats = [
  { key: 'published', label: '已發布', count: stats.published, color: 'text-green-600', bgColor: 'bg-green-100' },
  { key: 'inReview', label: '審核中', count: stats.inReview, color: 'text-blue-600', bgColor: 'bg-blue-100' },
  { key: 'qualityCheck', label: '品質檢查', count: stats.qualityCheck, color: 'text-purple-600', bgColor: 'bg-purple-100' },
  { key: 'readyToPublish', label: '準備發布', count: stats.readyToPublish, color: 'text-orange-600', bgColor: 'bg-orange-100' },
  { key: 'needsRevision', label: '需修改', count: stats.needsRevision, color: 'text-yellow-600', bgColor: 'bg-yellow-100' },
  { key: 'draft', label: '草稿', count: stats.draft, color: 'text-gray-600', bgColor: 'bg-gray-100' }
];
---

<div class="bg-white rounded-lg border border-gray-200 p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
    <svg class="h-5 w-5 text-medical-primary-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
    </svg>
    {specialtyName} 統計
  </h3>

  <!-- 主要統計 -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="text-center">
      <div class="text-2xl font-bold text-medical-primary-600 mb-1">
        {stats.published}
      </div>
      <div class="text-sm text-gray-600">已發布文章</div>
      {stats.total > 0 && (
        <div class="text-xs text-gray-400 mt-1">
          {publishedPercentage}% 完成
        </div>
      )}
    </div>
    
    <div class="text-center">
      <div class="text-2xl font-bold text-medical-success-600 mb-1">
        {calculatorCount}
      </div>
      <div class="text-sm text-gray-600">醫療工具</div>
    </div>
    
    <div class="text-center">
      <div class="text-2xl font-bold text-blue-600 mb-1">
        {inProgressCount}
      </div>
      <div class="text-sm text-gray-600">進行中</div>
      {stats.total > 0 && (
        <div class="text-xs text-gray-400 mt-1">
          {inProgressPercentage}% 處理中
        </div>
      )}
    </div>
    
    <div class="text-center">
      <div class="text-2xl font-bold text-gray-600 mb-1">
        {stats.total}
      </div>
      <div class="text-sm text-gray-600">總文章數</div>
    </div>
  </div>

  <!-- 進度條 -->
  {stats.total > 0 && (
    <div class="mb-6">
      <div class="flex justify-between text-sm text-gray-600 mb-2">
        <span>內容完成度</span>
        <span>{stats.published}/{stats.total}</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-3">
        <div 
          class="bg-medical-primary-600 h-3 rounded-full transition-all duration-500 ease-out"
          style={`width: ${publishedPercentage}%`}
        ></div>
      </div>
    </div>
  )}

  <!-- 詳細工作流程統計（僅開發環境或明確要求顯示） -->
  {(isDevelopment || showWorkflowStats) && stats.total > 0 && (
    <div>
      <h4 class="text-sm font-medium text-gray-700 mb-3 flex items-center">
        <svg class="h-4 w-4 text-gray-500 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        工作流程分布
        {isDevelopment && (
          <span class="ml-2 text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">
            開發環境
          </span>
        )}
      </h4>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
        {workflowStats.filter(stat => stat.count > 0).map(stat => (
          <div key={stat.key} class={`${stat.bgColor} rounded-lg p-3 text-center`}>
            <div class={`text-lg font-bold ${stat.color} mb-1`}>
              {stat.count}
            </div>
            <div class="text-xs text-gray-600">
              {stat.label}
            </div>
            <div class="text-xs text-gray-500 mt-1">
              {Math.round((stat.count / stats.total) * 100)}%
            </div>
          </div>
        ))}
      </div>
      
      <!-- 工作流程健康度指標 -->
      <div class="mt-4 p-3 bg-gray-50 rounded-lg">
        <div class="flex items-center justify-between text-sm">
          <span class="text-gray-600">工作流程健康度:</span>
          <div class="flex items-center space-x-2">
            {/* 發布率指標 */}
            <div class={`flex items-center ${
              publishedPercentage >= 80 ? 'text-green-600' :
              publishedPercentage >= 60 ? 'text-yellow-600' :
              'text-red-600'
            }`}>
              <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d={
                  publishedPercentage >= 80 ? 
                  "M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" :
                  publishedPercentage >= 60 ?
                  "M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" :
                  "M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                } clip-rule="evenodd" />
              </svg>
              <span class="text-xs">
                {publishedPercentage >= 80 ? '優秀' :
                 publishedPercentage >= 60 ? '良好' : '需改善'}
              </span>
            </div>
            
            {/* 積壓指標 */}
            <div class={`flex items-center ${
              stats.needsRevision <= 2 ? 'text-green-600' :
              stats.needsRevision <= 5 ? 'text-yellow-600' :
              'text-red-600'
            }`}>
              <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-xs">
                {stats.needsRevision <= 2 ? '流暢' :
                 stats.needsRevision <= 5 ? '正常' : '積壓'}
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  )}
</div>

<style>
  /* 進度條動畫 */
  @keyframes progressFill {
    from {
      width: 0%;
    }
  }
  
  .bg-medical-primary-600 {
    animation: progressFill 1s ease-out;
  }
</style>