---
/**
 * Admin page - demonstrates protected route functionality
 * Only accessible to authenticated users with admin role
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import ProtectedRoute from '../components/ProtectedRoute.astro';
import RouteGuard from '../components/islands/RouteGuard.tsx';

const title = '管理面板 - 醫療平台';
const description = '醫療平台管理面板，僅限管理員存取';
---

<BaseLayout title={title} description={description}>
  <main class="admin-page">
    <div class="admin-container">
      <div class="admin-header">
        <h1 class="admin-title">
          <svg class="admin-icon" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
          </svg>
          管理面板
        </h1>
        <p class="admin-subtitle">醫療平台系統管理</p>
      </div>

      <!-- Authentication Form - will show login if not authenticated -->
      <!-- Protected Admin Content -->
      <ProtectedRoute requireAuth={true} requiredRoles={['admin']}>
        <RouteGuard client:load requireAuth={true} requiredRoles={['admin']}>
          <div class="admin-content">
        <div class="admin-grid">
          <div class="admin-card">
            <div class="card-header">
              <h3 class="card-title">
                <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                系統狀態
              </h3>
            </div>
            <div class="card-content">
              <div class="status-item">
                <span class="status-label">服務狀態:</span>
                <span class="status-value status-online">正常運行</span>
              </div>
              <div class="status-item">
                <span class="status-label">資料庫:</span>
                <span class="status-value status-online">已連接</span>
              </div>
              <div class="status-item">
                <span class="status-label">API 狀態:</span>
                <span class="status-value status-online">可用</span>
              </div>
            </div>
          </div>

          <div class="admin-card">
            <div class="card-header">
              <h3 class="card-title">
                <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
                </svg>
                使用者管理
              </h3>
            </div>
            <div class="card-content">
              <div class="user-stats">
                <div class="stat-item">
                  <span class="stat-number">2</span>
                  <span class="stat-label">總使用者</span>
                </div>
                <div class="stat-item">
                  <span class="stat-number">1</span>
                  <span class="stat-label">管理員</span>
                </div>
                <div class="stat-item">
                  <span class="stat-number">1</span>
                  <span class="stat-label">醫師</span>
                </div>
              </div>
              <button class="btn btn-primary btn-sm">管理使用者</button>
            </div>
          </div>

          <div class="admin-card">
            <div class="card-header">
              <h3 class="card-title">
                <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                </svg>
                內容管理
              </h3>
            </div>
            <div class="card-content">
              <div class="content-stats">
                <div class="stat-item">
                  <span class="stat-number">2</span>
                  <span class="stat-label">計算機工具</span>
                </div>
                <div class="stat-item">
                  <span class="stat-number">5</span>
                  <span class="stat-label">衛教文章</span>
                </div>
                <div class="stat-item">
                  <span class="stat-number">3</span>
                  <span class="stat-label">流程圖</span>
                </div>
              </div>
              <button class="btn btn-primary btn-sm">管理內容</button>
            </div>
          </div>

          <div class="admin-card">
            <div class="card-header">
              <h3 class="card-title">
                <svg class="card-icon" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
                </svg>
                使用統計
              </h3>
            </div>
            <div class="card-content">
              <div class="usage-stats">
                <div class="stat-item">
                  <span class="stat-number">1,234</span>
                  <span class="stat-label">頁面瀏覽</span>
                </div>
                <div class="stat-item">
                  <span class="stat-number">567</span>
                  <span class="stat-label">工具使用</span>
                </div>
                <div class="stat-item">
                  <span class="stat-number">89</span>
                  <span class="stat-label">搜尋查詢</span>
                </div>
              </div>
              <button class="btn btn-primary btn-sm">查看詳細</button>
            </div>
          </div>
        </div>

        <div class="admin-actions">
          <h2 class="actions-title">快速操作</h2>
          <div class="actions-grid">
            <button class="action-btn">
              <svg class="action-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
              </svg>
              新增計算機
            </button>
            <button class="action-btn">
              <svg class="action-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-1H8v1a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
              </svg>
              新增文章
            </button>
            <button class="action-btn">
              <svg class="action-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01-1.414 1.414L5 6.414V8a1 1 0 01-2 0V4zm9 1a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293a1 1 0 11-1.414-1.414L13.586 5H12zm-9 7a1 1 0 012 0v1.586l2.293-2.293a1 1 0 111.414 1.414L6.414 15H8a1 1 0 010 2H4a1 1 0 01-1-1v-4zm13-1a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 010-2h1.586l-2.293-2.293a1 1 0 111.414-1.414L15.586 13H14a1 1 0 01-1-1z" clip-rule="evenodd"/>
              </svg>
              系統設定
            </button>
            <button class="action-btn">
              <svg class="action-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
              匯出資料
            </button>
          </div>
        </div>
        </RouteGuard>
      </ProtectedRoute>
    </div>
  </main>
</BaseLayout>

<style>
  .admin-page {
    min-height: 100vh;
    background-color: #f8fafc;
    padding: 2rem 1rem;
  }

  .admin-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .admin-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .admin-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-size: 2.5rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .admin-icon {
    width: 3rem;
    height: 3rem;
    color: #3b82f6;
  }

  .admin-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
  }

  .auth-section {
    max-width: 400px;
    margin: 0 auto 3rem;
  }

  .admin-content {
    animation: fadeIn 0.5s ease-in-out;
  }

  .admin-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .admin-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    border: 1px solid #e5e7eb;
    overflow: hidden;
  }

  .card-header {
    padding: 1.5rem 1.5rem 1rem;
    border-bottom: 1px solid #f3f4f6;
  }

  .card-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0;
  }

  .card-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #3b82f6;
  }

  .card-content {
    padding: 1rem 1.5rem 1.5rem;
  }

  .status-item,
  .stat-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .status-label,
  .stat-label {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .status-value {
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
  }

  .status-online {
    background-color: #d1fae5;
    color: #065f46;
  }

  .user-stats,
  .content-stats,
  .usage-stats {
    display: flex;
    justify-content: space-around;
    margin-bottom: 1.5rem;
  }

  .stat-item {
    text-align: center;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
    text-decoration: none;
  }

  .btn-primary {
    background-color: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background-color: #2563eb;
  }

  .btn-sm {
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
  }

  .admin-actions {
    background: white;
    border-radius: 12px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    border: 1px solid #e5e7eb;
    padding: 2rem;
  }

  .actions-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 2rem 1rem;
    background: #f8fafc;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }

  .action-btn:hover {
    background: #f1f5f9;
    border-color: #3b82f6;
    color: #3b82f6;
  }

  .action-icon {
    width: 2rem;
    height: 2rem;
    color: #6b7280;
    transition: color 0.2s ease-in-out;
  }

  .action-btn:hover .action-icon {
    color: #3b82f6;
  }

  .access-denied {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .denied-content {
    text-align: center;
    max-width: 400px;
  }

  .denied-icon {
    width: 4rem;
    height: 4rem;
    color: #ef4444;
    margin-bottom: 1rem;
  }

  .denied-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .denied-message {
    color: #6b7280;
    margin-bottom: 2rem;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .admin-title {
      font-size: 2rem;
      flex-direction: column;
      gap: 0.5rem;
    }

    .admin-icon {
      width: 2.5rem;
      height: 2.5rem;
    }

    .admin-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .actions-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .action-btn {
      padding: 1.5rem 0.75rem;
    }
  }
</style>

<script>
  import '../styles/auth.css';
</script>