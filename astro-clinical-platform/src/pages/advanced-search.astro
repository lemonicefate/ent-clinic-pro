---
/**
 * 進階搜尋頁面
 * 提供完整的搜尋和過濾功能
 * 
 * 更新日期：2025-01-30
 * 更新內容：新增進階搜尋和過濾功能
 * 
 * 需求對應：
 * - 需求 1.1: 專科分類架構系統 ✓
 * - 需求 7.1: 多語言支援機制 ✓
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import ContentSearchFilter from '../components/ContentSearchFilter.astro';
import type { SupportedLocale } from '../env.d';

const locale: SupportedLocale = 'zh-TW';
const isDevelopment = import.meta.env.DEV;

const pageTitle = '進階搜尋';
const pageDescription = '使用進階搜尋和過濾功能找到您需要的醫療內容';

const breadcrumbs = [
  { label: '首頁', href: '/' },
  { label: '進階搜尋' }
];
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  locale={locale}
  pageType="search"
  breadcrumbs={breadcrumbs}
>
  <div class="min-h-screen bg-gray-50">
    <!-- 頁面標頭 -->
    <div class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 py-8">
        <div class="text-center">
          <h1 class="text-3xl font-bold text-gray-900 mb-4">進階搜尋</h1>
          <p class="text-gray-600 max-w-2xl mx-auto">
            使用強大的搜尋和過濾功能，快速找到您需要的醫療工具、衛教資源和臨床指引
          </p>
        </div>
      </div>
    </div>

    <div class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- 搜尋和過濾側邊欄 -->
        <div class="lg:col-span-1">
          <div class="sticky top-4">
            <ContentSearchFilter
              locale={locale}
              showStatusFilter={isDevelopment}
              showAdvancedFilters={true}
              placeholder="搜尋醫療內容..."
            />
          </div>
        </div>

        <!-- 搜尋結果區域 -->
        <div class="lg:col-span-3">
          <!-- 預設狀態 -->
          <div id="default-state" class="text-center py-12">
            <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <h3 class="mt-4 text-lg font-medium text-gray-900">開始搜尋</h3>
            <p class="mt-2 text-gray-500">
              使用左側的搜尋框和篩選器來找到您需要的醫療內容
            </p>
            
            <!-- 搜尋建議 -->
            <div class="mt-8">
              <h4 class="text-sm font-medium text-gray-700 mb-4">熱門搜尋建議：</h4>
              <div class="flex flex-wrap justify-center gap-3">
                <button class="filter-tag" data-filter="specialty:cardiology">
                  心臟科
                </button>
                <button class="filter-tag" data-filter="category:disease">
                  疾病資訊
                </button>
                <button class="filter-tag" data-filter="difficulty:basic">
                  基礎內容
                </button>
                <button class="filter-tag" data-filter="patient-friendly:true">
                  病患友善
                </button>
                {isDevelopment && (
                  <button class="filter-tag" data-filter="status:published">
                    已發布
                  </button>
                )}
              </div>
            </div>

            <!-- 使用提示 -->
            <div class="mt-12 max-w-2xl mx-auto">
              <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
                <h4 class="text-sm font-medium text-blue-900 mb-3">搜尋提示</h4>
                <ul class="text-sm text-blue-800 space-y-2 text-left">
                  <li>• 使用關鍵字搜尋文章標題和內容</li>
                  <li>• 選擇醫療專科快速過濾相關內容</li>
                  <li>• 使用難度等級找到適合的內容</li>
                  <li>• 勾選「病患友善」找到易懂的衛教資料</li>
                  {isDevelopment && (
                    <li>• 開發環境可以按狀態篩選內容</li>
                  )}
                </ul>
              </div>
            </div>
          </div>

          <!-- 動態搜尋結果容器 -->
          <div id="search-results">
            <!-- JavaScript 動態載入的搜尋結果將顯示在這裡 -->
          </div>

          <!-- 無結果狀態 -->
          <div id="no-results" class="hidden text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.47-.881-6.08-2.33" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">找不到相關內容</h3>
            <p class="mt-1 text-sm text-gray-500">請嘗試調整搜尋條件或篩選器</p>
            
            <div class="mt-6">
              <button 
                id="clear-all-filters-btn"
                class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
              >
                清除所有篩選條件
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<!-- 載入搜尋功能 JavaScript -->
<script src="/src/scripts/content-search.js"></script>

<style>
  .filter-tag {
    @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium border transition-colors cursor-pointer;
    @apply border-gray-300 text-gray-700 bg-white hover:bg-gray-50;
  }
  
  .filter-tag.active {
    @apply border-medical-primary-300 text-medical-primary-700 bg-medical-primary-50;
  }
</style>

<script>
  // 處理搜尋建議按鈕點擊
  document.addEventListener('DOMContentLoaded', () => {
    const suggestionButtons = document.querySelectorAll('.filter-tag[data-filter]');
    
    suggestionButtons.forEach(button => {
      button.addEventListener('click', () => {
        // 觸發搜尋篩選器
        if (window.contentSearchFilter) {
          window.contentSearchFilter.handleQuickFilter(button);
          
          // 隱藏預設狀態
          const defaultState = document.getElementById('default-state');
          if (defaultState) {
            defaultState.style.display = 'none';
          }
        }
      });
    });

    // 清除所有篩選按鈕
    const clearAllBtn = document.getElementById('clear-all-filters-btn');
    if (clearAllBtn) {
      clearAllBtn.addEventListener('click', () => {
        if (window.contentSearchFilter) {
          window.contentSearchFilter.clearAllFilters();
          
          // 顯示預設狀態
          const defaultState = document.getElementById('default-state');
          if (defaultState) {
            defaultState.style.display = 'block';
          }
        }
      });
    }
  });
</script>