---
/**
 * 搜尋結果頁面
 * 顯示全域搜尋結果
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Search from '../components/islands/Search.tsx';
import { t } from '../utils/i18n';
import type { SupportedLocale } from '../env.d';

// 從 URL 參數獲取搜尋查詢
const url = new URL(Astro.request.url);
const query = url.searchParams.get('q') || '';
const locale: SupportedLocale = 'zh-TW'; // 這裡應該從路由中獲取

const pageTitle = query 
  ? `${t('search.results', locale)}: ${query}` 
  : t('search.title', locale);

const breadcrumbs = [
  { label: t('nav.home', locale), href: '/' },
  { label: t('nav.search', locale) }
];
---

<BaseLayout 
  title={pageTitle}
  description={`搜尋醫療工具和衛教內容：${query}`}
  locale={locale}
  pageType="search"
  breadcrumbs={breadcrumbs}
>
  <main class="container mx-auto px-4 py-8">
    <!-- 頁面標題 -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-medical-neutral-900 mb-4">
        {t('nav.search', locale)}
      </h1>
      
      {query && (
        <p class="text-lg text-medical-neutral-600">
          {t('search.results', locale)}: <strong>"{query}"</strong>
        </p>
      )}
    </div>

    <!-- 搜尋框 -->
    <div class="mb-8">
      <div class="max-w-2xl">
        <Search 
          client:load
          locale={locale}
          placeholder={t('search.placeholder', locale)}
          className="w-full"
          autoFocus={!query}
        />
      </div>
      
      <!-- 進階搜尋連結 -->
      <div class="mt-4 text-center">
        <a 
          href="/advanced-search" 
          class="inline-flex items-center text-medical-primary-600 hover:text-medical-primary-700 font-medium transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          使用進階搜尋功能
        </a>
        <p class="text-sm text-medical-neutral-500 mt-1">
          智能搜尋、自動完成、個人化推薦
        </p>
      </div>
    </div>

    <!-- 搜尋結果區域 -->
    <div id="search-results-container" class="space-y-6">
      {query ? (
        <!-- 如果有查詢參數，顯示載入狀態 -->
        <div class="text-center py-12">
          <div class="animate-spin h-8 w-8 border-2 border-medical-primary-600 border-t-transparent rounded-full mx-auto mb-4"></div>
          <p class="text-medical-neutral-600">{t('search.loading', locale)}</p>
        </div>
      ) : (
        <!-- 沒有查詢時的提示 -->
        <div class="text-center py-12">
          <svg class="mx-auto h-16 w-16 text-medical-neutral-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <h2 class="text-xl font-semibold text-medical-neutral-900 mb-2">
            開始搜尋醫療內容
          </h2>
          <p class="text-medical-neutral-600 max-w-md mx-auto">
            搜尋醫療計算機、衛教文章、診療流程圖等專業內容
          </p>
        </div>
      )}
    </div>

    <!-- 搜尋建議 -->
    <div class="mt-12">
      <h2 class="text-xl font-semibold text-medical-neutral-900 mb-6">
        熱門搜尋
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- 熱門搜尋標籤 -->
        <div class="space-y-3">
          <h3 class="font-medium text-medical-neutral-800">醫療計算機</h3>
          <div class="flex flex-wrap gap-2">
            <a href="/search?q=CHA2DS2-VASc" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-primary-100 text-medical-primary-800 hover:bg-medical-primary-200 transition-colors">
              CHA₂DS₂-VASc
            </a>
            <a href="/search?q=BMI" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-primary-100 text-medical-primary-800 hover:bg-medical-primary-200 transition-colors">
              BMI 計算
            </a>
            <a href="/search?q=GFR" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-primary-100 text-medical-primary-800 hover:bg-medical-primary-200 transition-colors">
              腎功能
            </a>
          </div>
        </div>
        
        <div class="space-y-3">
          <h3 class="font-medium text-medical-neutral-800">疾病資訊</h3>
          <div class="flex flex-wrap gap-2">
            <a href="/search?q=心房顫動" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-success-100 text-medical-success-800 hover:bg-medical-success-200 transition-colors">
              心房顫動
            </a>
            <a href="/search?q=高血壓" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-success-100 text-medical-success-800 hover:bg-medical-success-200 transition-colors">
              高血壓
            </a>
            <a href="/search?q=糖尿病" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-success-100 text-medical-success-800 hover:bg-medical-success-200 transition-colors">
              糖尿病
            </a>
          </div>
        </div>
        
        <div class="space-y-3">
          <h3 class="font-medium text-medical-neutral-800">診療流程</h3>
          <div class="flex flex-wrap gap-2">
            <a href="/search?q=急性心肌梗塞" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-warning-100 text-medical-warning-800 hover:bg-medical-warning-200 transition-colors">
              急性心肌梗塞
            </a>
            <a href="/search?q=中風" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-warning-100 text-medical-warning-800 hover:bg-medical-warning-200 transition-colors">
              中風處理
            </a>
            <a href="/search?q=急診" class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-medical-warning-100 text-medical-warning-800 hover:bg-medical-warning-200 transition-colors">
              急診流程
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  // 如果 URL 中有查詢參數，執行搜尋
  document.addEventListener('DOMContentLoaded', async function() {
    const urlParams = new URLSearchParams(window.location.search);
    const query = urlParams.get('q');
    
    if (query) {
      try {
        // 動態導入搜尋功能 (使用客戶端安全版本)
        // const { searchContent } = await import('../utils/content-helpers');
        // Temporarily disable search functionality to fix build
        const searchContent = async () => [];
        const results = await searchContent(query, 'zh-TW', {
          includeCalculators: true,
          includeEducation: true,
          includeFlowcharts: true,
          limit: 20
        });
        
        displaySearchResults(results, query);
      } catch (error) {
        console.error('Search failed:', error);
        displaySearchError();
      }
    }
  });
  
  function displaySearchResults(results, query) {
    const container = document.getElementById('search-results-container');
    if (!container) return;
    
    if (results.length === 0) {
      container.innerHTML = `
        <div class="text-center py-12">
          <svg class="mx-auto h-16 w-16 text-medical-neutral-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h2 class="text-xl font-semibold text-medical-neutral-900 mb-2">
            找不到相關內容
          </h2>
          <p class="text-medical-neutral-600">
            嘗試使用不同的關鍵字或檢查拼寫
          </p>
        </div>
      `;
      return;
    }
    
    const resultsHtml = results.map(result => {
      const typeIcon = getTypeIcon(result.type);
      const typeLabel = getTypeLabel(result.type);
      const typeColor = getTypeColor(result.type);
      const url = getResultUrl(result.type, result.slug);
      
      return `
        <article class="bg-white rounded-lg border border-medical-neutral-200 p-6 hover:shadow-md transition-shadow">
          <div class="flex items-start space-x-4">
            <div class="flex-shrink-0 ${typeColor}">
              ${typeIcon}
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center space-x-2 mb-2">
                <h3 class="text-lg font-semibold text-medical-neutral-900">
                  <a href="${url}" class="hover:text-medical-primary-600 transition-colors">
                    ${result.title}
                  </a>
                </h3>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium ${typeColor.replace('text-', 'bg-').replace('-600', '-100')} ${typeColor.replace('-600', '-800')}">
                  ${typeLabel}
                </span>
              </div>
              <p class="text-medical-neutral-600 mb-3 line-clamp-2">
                ${result.excerpt}
              </p>
              <div class="flex items-center space-x-4 text-sm text-medical-neutral-500">
                <span class="capitalize">${result.category}</span>
                <span>相關性: ${Math.round(result.relevance * 10)}%</span>
              </div>
            </div>
          </div>
        </article>
      `;
    }).join('');
    
    container.innerHTML = `
      <div class="mb-6">
        <p class="text-medical-neutral-600">
          找到 <strong>${results.length}</strong> 個相關結果
        </p>
      </div>
      <div class="space-y-4">
        ${resultsHtml}
      </div>
    `;
  }
  
  function displaySearchError() {
    const container = document.getElementById('search-results-container');
    if (!container) return;
    
    container.innerHTML = `
      <div class="text-center py-12">
        <svg class="mx-auto h-16 w-16 text-medical-error-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
        <h2 class="text-xl font-semibold text-medical-neutral-900 mb-2">
          搜尋發生錯誤
        </h2>
        <p class="text-medical-neutral-600 mb-4">
          請稍後再試或聯絡技術支援
        </p>
        <button onclick="window.location.reload()" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-medical-primary-600 hover:bg-medical-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-medical-primary-500">
          重新載入
        </button>
      </div>
    `;
  }
  
  function getTypeIcon(type) {
    switch (type) {
      case 'calculator':
        return '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>';
      case 'education':
        return '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" /></svg>';
      case 'flowchart':
        return '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>';
      default:
        return '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>';
    }
  }
  
  function getTypeLabel(type) {
    switch (type) {
      case 'calculator': return '醫療計算機';
      case 'education': return '衛教資源';
      case 'flowchart': return '診療流程';
      default: return '內容';
    }
  }
  
  function getTypeColor(type) {
    switch (type) {
      case 'calculator': return 'text-medical-primary-600';
      case 'education': return 'text-medical-success-600';
      case 'flowchart': return 'text-medical-warning-600';
      default: return 'text-medical-neutral-600';
    }
  }
  
  function getResultUrl(type, slug) {
    switch (type) {
      case 'calculator': return `/tools/${slug}`;
      case 'education': return `/education/${slug}`;
      case 'flowchart': return `/flowcharts/${slug}`;
      default: return `/${slug}`;
    }
  }
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>