---
// 預覽資訊頁面
import Layout from '../layouts/BaseLayout.astro';
import PreviewBanner from '../components/PreviewBanner.astro';

const title = 'PR 預覽資訊';
const description = 'Pull Request 預覽環境詳細資訊';

// 檢查是否為預覽模式
const isPreview = import.meta.env.PUBLIC_PREVIEW_MODE === 'true';
const prNumber = import.meta.env.PUBLIC_PR_NUMBER;
const branchName = import.meta.env.PUBLIC_BRANCH_NAME;
const commitSha = import.meta.env.PUBLIC_COMMIT_SHA;
---

<Layout title={title} description={description}>
  <PreviewBanner />
  
  <main class="preview-info">
    <div class="container">
      <header class="page-header">
        <h1>🔍 PR 預覽資訊</h1>
        {isPreview ? (
          <div class="preview-status active">
            <span class="status-indicator"></span>
            預覽模式啟用
          </div>
        ) : (
          <div class="preview-status inactive">
            <span class="status-indicator"></span>
            非預覽模式
          </div>
        )}
      </header>

      {isPreview ? (
        <div class="info-grid">
          <!-- PR 基本資訊 -->
          <section class="info-card">
            <h2>📋 PR 基本資訊</h2>
            <div class="info-details">
              <div class="info-item">
                <label>PR 編號</label>
                <span class="value">#{prNumber}</span>
              </div>
              <div class="info-item">
                <label>分支名稱</label>
                <span class="value branch">{branchName}</span>
              </div>
              <div class="info-item">
                <label>Commit SHA</label>
                <span class="value commit">{commitSha?.substring(0, 7)}</span>
              </div>
              <div class="info-item">
                <label>建置時間</label>
                <span class="value" id="build-time">載入中...</span>
              </div>
            </div>
          </section>

          <!-- 環境資訊 -->
          <section class="info-card">
            <h2>🌐 環境資訊</h2>
            <div class="info-details">
              <div class="info-item">
                <label>預覽 URL</label>
                <span class="value url" id="preview-url">載入中...</span>
              </div>
              <div class="info-item">
                <label>Node 版本</label>
                <span class="value">18.x</span>
              </div>
              <div class="info-item">
                <label>Astro 版本</label>
                <span class="value">4.x</span>
              </div>
              <div class="info-item">
                <label>部署平台</label>
                <span class="value">Cloudflare Pages</span>
              </div>
            </div>
          </section>
        </div>
      ) : (
        <div class="no-preview">
          <div class="no-preview-content">
            <h2>📄 一般模式</h2>
            <p>此頁面在生產環境中顯示網站的一般資訊。</p>
            <p>預覽功能僅在 PR 預覽環境中可用。</p>
          </div>
        </div>
      )}
    </div>
  </main>
</Layout><style>
  .
preview-info {
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40px 0;
  }
  
  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: 40px;
    color: white;
  }
  
  .page-header h1 {
    font-size: 3rem;
    margin: 0 0 20px 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
  
  .preview-status {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    border-radius: 25px;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }
  
  .preview-status.active {
    background: rgba(40, 167, 69, 0.2);
    border: 1px solid rgba(40, 167, 69, 0.3);
  }
  
  .preview-status.inactive {
    background: rgba(108, 117, 125, 0.2);
    border: 1px solid rgba(108, 117, 125, 0.3);
  }
  
  .status-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: currentColor;
  }
  
  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 30px;
  }
  
  .info-card {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
  }
  
  .info-card h2 {
    margin: 0 0 24px 0;
    color: #495057;
    font-size: 1.5rem;
    border-bottom: 2px solid #e9ecef;
    padding-bottom: 12px;
  }
  
  .info-details {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }
  
  .info-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #f1f3f4;
  }
  
  .info-item:last-child {
    border-bottom: none;
  }
  
  .info-item label {
    font-weight: 600;
    color: #6c757d;
    font-size: 14px;
  }
  
  .value {
    font-family: monospace;
    background: #f8f9fa;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 13px;
    color: #495057;
  }
  
  .value.branch {
    background: #e3f2fd;
    color: #1976d2;
  }
  
  .value.commit {
    background: #f3e5f5;
    color: #7b1fa2;
  }
  
  .value.url {
    background: #e8f5e8;
    color: #2e7d32;
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .no-preview {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 400px;
  }
  
  .no-preview-content {
    text-align: center;
    background: rgba(255, 255, 255, 0.95);
    padding: 60px 40px;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
  }
  
  .no-preview-content h2 {
    margin: 0 0 16px 0;
    color: #495057;
    font-size: 2rem;
  }
  
  .no-preview-content p {
    margin: 8px 0;
    color: #6c757d;
    font-size: 1.1rem;
    line-height: 1.6;
  }
  
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }
    
    .info-grid {
      grid-template-columns: 1fr;
    }
    
    .info-card {
      padding: 20px;
    }
    
    .info-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }
    
    .value {
      align-self: stretch;
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // 設定建置時間
    const buildTimeElement = document.getElementById('build-time');
    if (buildTimeElement) {
      buildTimeElement.textContent = new Date().toLocaleString('zh-TW');
    }
    
    // 設定預覽 URL
    const previewUrlElement = document.getElementById('preview-url');
    if (previewUrlElement) {
      previewUrlElement.textContent = window.location.origin;
      previewUrlElement.title = window.location.origin;
    }
    
    // 載入額外的預覽資訊
    loadPreviewInfo();
  });
  
  async function loadPreviewInfo() {
    try {
      // 嘗試載入預覽資訊 JSON
      const response = await fetch('/preview-info/info.json');
      if (response.ok) {
        const data = await response.json();
        updatePreviewInfo(data);
      }
    } catch (error) {
      console.log('無法載入預覽資訊:', error);
    }
  }
  
  function updatePreviewInfo(data) {
    // 更新建置時間
    const buildTimeElement = document.getElementById('build-time');
    if (buildTimeElement && data.build_time) {
      const buildTime = new Date(data.build_time);
      buildTimeElement.textContent = buildTime.toLocaleString('zh-TW');
    }
    
    // 可以在這裡添加更多資訊更新邏輯
  }
</script>