---
/**
 * 決策樹總覽頁面
 * 顯示所有可用的醫療決策樹
 */

import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import MedicalSEO from '../../components/seo/MedicalSEO.astro';
import { t } from '../../utils/i18n';
import type { SupportedLocale } from '../../env.d';

const locale = (Astro.currentLocale as SupportedLocale) || 'zh-TW';

// 獲取所有決策樹
const allDecisionTrees = await getCollection('decision-trees');
const activeDecisionTrees = allDecisionTrees.filter(tree => tree.data.isActive);

// 按分類分組
const treesByCategory = activeDecisionTrees.reduce((acc, tree) => {
  const category = tree.data.category;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(tree.data);
  return acc;
}, {} as Record<string, any[]>);

// 分類標籤映射
const categoryLabels = {
  'diagnostic': '診斷',
  'treatment': '治療',
  'emergency': '急診',
  'screening': '篩檢',
  'triage': '分流',
  'management': '管理'
};

// SEO 資料
const seoTitle = '醫療決策樹 - 臨床決策支援工具';
const seoDescription = '互動式醫療決策樹集合，提供系統性的臨床決策支援，幫助醫療專業人員進行診斷、治療和患者管理。';
const keywords = ['decision tree', 'clinical decision support', 'medical diagnosis', 'treatment pathway', 'clinical guidelines'];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalWebPage",
  "name": seoTitle,
  "description": seoDescription,
  "about": {
    "@type": "MedicalProcedure",
    "name": "Clinical Decision Support"
  },
  "audience": {
    "@type": "MedicalAudience",
    "audienceType": "Physician"
  },
  "inLanguage": locale,
  "isAccessibleForFree": true,
  "publisher": {
    "@type": "Organization",
    "name": "Astro Clinical Platform"
  }
};
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  locale={locale}
>
  <MedicalSEO
    slot="head"
    title={seoTitle}
    description={seoDescription}
    keywords={keywords}
    structuredData={structuredData}
    locale={locale}
  />

  <main class="container mx-auto px-4 py-8">
    <!-- 頁面標題 -->
    <div class="text-center mb-12">
      <h1 class="text-3xl font-bold text-medical-neutral-900 mb-4">
        醫療決策樹
      </h1>
      <p class="text-lg text-medical-neutral-600 max-w-3xl mx-auto">
        互動式臨床決策支援工具，提供系統性的診斷和治療指引，幫助醫療專業人員做出基於證據的臨床決策。
      </p>
    </div>

    <!-- 統計概覽 -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
      <div class="bg-white rounded-lg border border-medical-neutral-200 p-6 text-center">
        <div class="text-2xl font-bold text-medical-primary-600 mb-2">
          {activeDecisionTrees.length}
        </div>
        <div class="text-sm text-medical-neutral-600">可用決策樹</div>
      </div>
      
      <div class="bg-white rounded-lg border border-medical-neutral-200 p-6 text-center">
        <div class="text-2xl font-bold text-medical-primary-600 mb-2">
          {Object.keys(treesByCategory).length}
        </div>
        <div class="text-sm text-medical-neutral-600">涵蓋分類</div>
      </div>
      
      <div class="bg-white rounded-lg border border-medical-neutral-200 p-6 text-center">
        <div class="text-2xl font-bold text-medical-primary-600 mb-2">
          {activeDecisionTrees.filter(tree => tree.data.isFeatured).length}
        </div>
        <div class="text-sm text-medical-neutral-600">精選工具</div>
      </div>
      
      <div class="bg-white rounded-lg border border-medical-neutral-200 p-6 text-center">
        <div class="text-2xl font-bold text-medical-primary-600 mb-2">
          {activeDecisionTrees.reduce((sum, tree) => sum + (tree.data.usageCount || 0), 0)}
        </div>
        <div class="text-sm text-medical-neutral-600">總使用次數</div>
      </div>
    </div>

    <!-- 精選決策樹 -->
    {activeDecisionTrees.some(tree => tree.data.isFeatured) && (
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-medical-neutral-900 mb-6">精選決策樹</h2>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {activeDecisionTrees
            .filter(tree => tree.data.isFeatured)
            .map(tree => (
              <div class="bg-white rounded-lg border border-medical-neutral-200 p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-medical-neutral-900 mb-2">
                      <a 
                        href={`/${locale}/decision-trees/${tree.data.slug}`}
                        class="hover:text-medical-primary-600 transition-colors"
                      >
                        {tree.data.title[locale] || tree.data.title['zh-TW']}
                      </a>
                    </h3>
                    
                    <p class="text-medical-neutral-600 text-sm mb-3">
                      {tree.data.description?.[locale] || tree.data.description?.['zh-TW']}
                    </p>
                    
                    <div class="flex items-center space-x-3 text-xs">
                      <span class={`
                        inline-flex items-center px-2 py-1 rounded-full font-medium
                        ${tree.data.difficulty === 'basic' ? 'bg-green-100 text-green-800' : 
                          tree.data.difficulty === 'intermediate' ? 'bg-yellow-100 text-yellow-800' : 
                          'bg-red-100 text-red-800'}
                      `}>
                        {tree.data.difficulty === 'basic' ? '基礎' : 
                         tree.data.difficulty === 'intermediate' ? '中級' : '進階'}
                      </span>
                      
                      <span class="inline-flex items-center px-2 py-1 rounded-full bg-medical-neutral-100 text-medical-neutral-800 font-medium">
                        {categoryLabels[tree.data.category] || tree.data.category}
                      </span>
                      
                      {tree.data.evidenceLevel && (
                        <span class="inline-flex items-center px-2 py-1 rounded-full bg-medical-primary-100 text-medical-primary-800 font-medium">
                          證據等級 {tree.data.evidenceLevel}
                        </span>
                      )}
                    </div>
                  </div>
                  
                  <div class="ml-4 text-right">
                    <div class="text-sm text-medical-neutral-500 mb-1">使用次數</div>
                    <div class="text-lg font-semibold text-medical-neutral-900">
                      {tree.data.usageCount || 0}
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-2 text-xs text-medical-neutral-500">
                    <span>{tree.data.medicalSpecialties.slice(0, 2).join(', ')}</span>
                    {tree.data.medicalSpecialties.length > 2 && (
                      <span>+{tree.data.medicalSpecialties.length - 2} 更多</span>
                    )}
                  </div>
                  
                  <a 
                    href={`/${locale}/decision-trees/${tree.data.slug}`}
                    class="inline-flex items-center px-3 py-1 text-sm font-medium text-medical-primary-600 hover:text-medical-primary-700 transition-colors"
                  >
                    開始使用
                    <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </section>
    )}

    <!-- 按分類顯示決策樹 -->
    <section>
      <h2 class="text-2xl font-bold text-medical-neutral-900 mb-6">所有決策樹</h2>
      
      <div class="space-y-8">
        {Object.entries(treesByCategory).map(([category, trees]) => (
          <div key={category}>
            <h3 class="text-xl font-semibold text-medical-neutral-900 mb-4 flex items-center">
              <span class="inline-flex items-center justify-center w-8 h-8 bg-medical-primary-100 text-medical-primary-600 rounded-lg mr-3">
                {category === 'diagnostic' ? '🔍' :
                 category === 'treatment' ? '💊' :
                 category === 'emergency' ? '🚨' :
                 category === 'screening' ? '📋' :
                 category === 'triage' ? '🏥' :
                 category === 'management' ? '📊' : '📝'}
              </span>
              {categoryLabels[category] || category}
              <span class="ml-2 text-sm font-normal text-medical-neutral-500">
                ({trees.length} 個工具)
              </span>
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {trees.map(tree => (
                <div key={tree.id} class="bg-white rounded-lg border border-medical-neutral-200 p-4 hover:shadow-md transition-shadow">
                  <div class="mb-3">
                    <h4 class="font-medium text-medical-neutral-900 mb-2">
                      <a 
                        href={`/${locale}/decision-trees/${tree.slug}`}
                        class="hover:text-medical-primary-600 transition-colors"
                      >
                        {tree.title[locale] || tree.title['zh-TW']}
                      </a>
                    </h4>
                    
                    {tree.description && (
                      <p class="text-sm text-medical-neutral-600 line-clamp-2">
                        {tree.description[locale] || tree.description['zh-TW']}
                      </p>
                    )}
                  </div>
                  
                  <div class="flex items-center justify-between text-xs">
                    <div class="flex items-center space-x-2">
                      <span class={`
                        inline-flex items-center px-2 py-1 rounded-full font-medium
                        ${tree.difficulty === 'basic' ? 'bg-green-100 text-green-800' : 
                          tree.difficulty === 'intermediate' ? 'bg-yellow-100 text-yellow-800' : 
                          'bg-red-100 text-red-800'}
                      `}>
                        {tree.difficulty === 'basic' ? '基礎' : 
                         tree.difficulty === 'intermediate' ? '中級' : '進階'}
                      </span>
                      
                      {tree.evidenceLevel && (
                        <span class="text-medical-neutral-500">
                          證據 {tree.evidenceLevel}
                        </span>
                      )}
                    </div>
                    
                    <span class="text-medical-neutral-500">
                      {tree.usageCount || 0} 次使用
                    </span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- 使用說明 -->
    <section class="mt-12 bg-medical-primary-50 rounded-lg p-6">
      <h2 class="text-xl font-semibold text-medical-primary-900 mb-4">如何使用決策樹</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center">
          <div class="w-12 h-12 bg-medical-primary-600 text-white rounded-lg flex items-center justify-center mx-auto mb-3">
            1
          </div>
          <h3 class="font-medium text-medical-primary-900 mb-2">選擇適合的決策樹</h3>
          <p class="text-sm text-medical-primary-700">
            根據臨床情況和患者症狀選擇相應的決策樹工具
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-medical-primary-600 text-white rounded-lg flex items-center justify-center mx-auto mb-3">
            2
          </div>
          <h3 class="font-medium text-medical-primary-900 mb-2">逐步回答問題</h3>
          <p class="text-sm text-medical-primary-700">
            根據患者的實際情況選擇最符合的選項，系統會自動引導下一步
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-12 h-12 bg-medical-primary-600 text-white rounded-lg flex items-center justify-center mx-auto mb-3">
            3
          </div>
          <h3 class="font-medium text-medical-primary-900 mb-2">獲得建議</h3>
          <p class="text-sm text-medical-primary-700">
            系統會提供基於證據的診斷建議和後續處置方案
          </p>
        </div>
      </div>
    </section>

    <!-- 免責聲明 -->
    <div class="mt-8 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
      <div class="flex">
        <svg class="h-5 w-5 text-yellow-400 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800">醫療免責聲明</h3>
          <p class="mt-1 text-sm text-yellow-700">
            所有決策樹僅供醫療專業人員參考使用，不能替代專業醫療判斷。請結合臨床經驗和患者具體情況做出最終決策。
          </p>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>