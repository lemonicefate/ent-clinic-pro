---
/**
 * 醫療專科分類頁面
 * 展示所有醫療專科和相關內容
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 獲取內容數據
const calculators = await getCollection('calculators');
const education = await getCollection('education');

// 醫療專科配置
const medicalSpecialties = [
  {
    id: 'cardiology',
    name: '心臟科',
    description: '心血管疾病診斷與治療工具',
    color: 'bg-red-500',
    icon: '❤️'
  },
  {
    id: 'neurology',
    name: '神經科',
    description: '神經系統疾病評估工具',
    color: 'bg-purple-500',
    icon: '🧠'
  },
  {
    id: 'endocrinology',
    name: '內分泌科',
    description: '內分泌代謝疾病管理',
    color: 'bg-green-500',
    icon: '🔬'
  },
  {
    id: 'general',
    name: '一般醫學',
    description: '基礎醫療評估工具',
    color: 'bg-blue-500',
    icon: '🏥'
  },
  {
    id: 'emergency',
    name: '急診醫學',
    description: '急診快速評估工具',
    color: 'bg-orange-500',
    icon: '🚨'
  },
  {
    id: 'pediatrics',
    name: '小兒科',
    description: '兒童健康評估工具',
    color: 'bg-pink-500',
    icon: '👶'
  }
];

// 計算每個專科的內容數量
const specialtyStats = medicalSpecialties.map(specialty => {
  const calculatorCount = calculators.filter(calc => 
    calc.data.medicalSpecialties?.includes(specialty.id) || calc.data.category === specialty.id
  ).length;
  
  const educationCount = education.filter(edu => 
    edu.data.medicalSpecialties?.includes(specialty.id)
  ).length;
  
  return {
    ...specialty,
    calculatorCount,
    educationCount,
    totalCount: calculatorCount + educationCount
  };
});
---

<BaseLayout 
  title="醫療專科分類"
  description="按醫療專科瀏覽相關的臨床工具和衛教內容"
  pageType="category"
>
  <div class="container mx-auto px-4 py-8">
    <!-- 頁面標題 -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        醫療專科分類
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        按照醫療專科瀏覽相關的臨床工具和衛教內容
      </p>
    </div>

    <!-- 專科網格 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {specialtyStats.map((specialty) => (
        <a 
          href={`/specialties/${specialty.id}`}
          class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 group border border-gray-200"
        >
          <div class="flex items-center mb-4">
            <div class={`w-12 h-12 ${specialty.color} rounded-lg flex items-center justify-center mr-4 group-hover:scale-110 transition-transform text-2xl`}>
              {specialty.icon}
            </div>
            <div>
              <h3 class="text-xl font-semibold text-gray-900 group-hover:text-medical-primary-600 transition-colors">
                {specialty.name}
              </h3>
              <p class="text-sm text-gray-500">
                {specialty.totalCount} 項內容
              </p>
            </div>
          </div>
          
          <p class="text-gray-600 mb-4">
            {specialty.description}
          </p>
          
          <div class="flex justify-between text-sm text-gray-500">
            <span>{specialty.calculatorCount} 個工具</span>
            <span>{specialty.educationCount} 篇文章</span>
          </div>
        </a>
      ))}
    </div>

    <!-- 統計摘要 -->
    <div class="mt-16 bg-gray-50 rounded-xl p-8">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">
          平台統計
        </h2>
        <p class="text-gray-600">
          涵蓋多個醫療專科的豐富內容
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <div class="text-3xl font-bold text-medical-primary-600 mb-1">
            {specialtyStats.reduce((sum, s) => sum + s.calculatorCount, 0)}
          </div>
          <div class="text-gray-600 text-sm">醫療工具</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-medical-primary-600 mb-1">
            {specialtyStats.reduce((sum, s) => sum + s.educationCount, 0)}
          </div>
          <div class="text-gray-600 text-sm">衛教文章</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-medical-primary-600 mb-1">
            {specialtyStats.length}
          </div>
          <div class="text-gray-600 text-sm">醫療專科</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-medical-primary-600 mb-1">
            {specialtyStats.reduce((sum, s) => sum + s.totalCount, 0)}
          </div>
          <div class="text-gray-600 text-sm">總內容數</div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>