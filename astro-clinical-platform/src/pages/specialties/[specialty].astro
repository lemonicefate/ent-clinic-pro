---
/**
 * 醫療專科動態頁面
 * 根據專科 ID 顯示相關的工具和內容
 * 
 * 更新日期：2025-01-30
 * 更新內容：新增 SOP 工作流程支援
 * - 顯示專科文章統計（包含狀態分布）
 * - 過濾已發布內容
 * - 新增版本和作者資訊顯示
 * - 優化 SEO 元資料
 * 
 * 需求對應：
 * - 需求 1.1: 專科分類架構系統 ✓
 * - 需求 7.1: 多語言支援機制 ✓
 * - 需求 8.3: 效能監控和分析 ✓
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import SpecialtyStats from '../../components/SpecialtyStats.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../../utils/i18n';

export async function getStaticPaths() {
  // 從醫療專科集合獲取專科資料
  let medicalSpecialties = [];
  try {
    medicalSpecialties = await getCollection('medical-specialties');
  } catch (error) {
    console.warn('Failed to load medical-specialties collection, using fallback data');
  }

  // 如果無法載入專科集合，使用預設資料
  const specialties = medicalSpecialties.length > 0 
    ? medicalSpecialties.map(spec => ({
        id: spec.data.id,
        name: spec.data.name['zh-TW'] || spec.data.name,
        description: spec.data.description?.['zh-TW'] || spec.data.description || '',
        color: spec.data.color,
        icon: spec.data.icon,
        data: spec.data
      }))
    : [
        { id: 'cardiology', name: '心臟科', description: '心血管疾病診斷與治療工具', color: '#e74c3c', icon: '❤️' },
        { id: 'neurology', name: '神經科', description: '神經系統疾病評估工具', color: '#9b59b6', icon: '🧠' },
        { id: 'endocrinology', name: '內分泌科', description: '內分泌代謝疾病管理', color: '#f39c12', icon: '🔬' },
        { id: 'general', name: '一般醫學', description: '基礎醫療評估工具', color: '#3498db', icon: '🩺' },
        { id: 'emergency', name: '急診醫學', description: '急診快速評估工具', color: '#e67e22', icon: '🚨' },
        { id: 'pediatrics', name: '小兒科', description: '兒童健康評估工具', color: '#2ecc71', icon: '👶' },
        { id: 'orthopedics', name: '骨科', description: '骨骼肌肉系統疾病', color: '#34495e', icon: '🦴' }
      ];

  return specialties.map(specialty => ({
    params: { specialty: specialty.id },
    props: { specialty }
  }));
}

const { specialty } = Astro.props;

// 檢查 specialty 是否存在
if (!specialty) {
  throw new Error('Specialty not found');
}

const isDevelopment = import.meta.env.DEV;

// 獲取相關的計算機和教育內容
let calculators = [];
let allEducation = [];

try {
  calculators = await getCollection('calculators');
} catch (error) {
  console.warn('Failed to load calculators collection:', error);
  calculators = [];
}

try {
  allEducation = await getCollection('education');
} catch (error) {
  console.warn('Failed to load education collection:', error);
  allEducation = [];
}

const relatedCalculators = calculators.filter(calc => {
  // 確保 calc.data 存在且有必要的屬性
  if (!calc?.data) return false;
  
  const hasSpecialty = calc.data.medicalSpecialties?.includes(specialty.id);
  const isActive = calc.data.isActive !== false; // 預設為 true 如果未定義
  
  return hasSpecialty && isActive;
});

// 過濾教育內容：生產環境只顯示已發布內容
const allRelatedEducation = allEducation.filter(edu => {
  if (!edu?.data) return false;
  return edu.data.medicalSpecialties?.includes(specialty.id) && edu.data.isActive !== false;
});

const relatedEducation = allRelatedEducation.filter(edu => {
  if (isDevelopment) {
    return true; // 開發環境顯示所有相關內容
  }
  return edu.data.status === 'published'; // 生產環境只顯示已發布內容
});

// 計算專科統計資料
const specialtyStats = {
  total: allRelatedEducation.length,
  published: allRelatedEducation.filter(e => e.data.status === 'published').length,
  inReview: allRelatedEducation.filter(e => e.data.status === 'in-review').length,
  draft: allRelatedEducation.filter(e => e.data.status === 'draft').length,
  needsRevision: allRelatedEducation.filter(e => e.data.status === 'needs-revision').length,
  qualityCheck: allRelatedEducation.filter(e => e.data.status === 'quality-check').length,
  readyToPublish: allRelatedEducation.filter(e => e.data.status === 'ready-to-publish').length
};

const pageTitle = `${specialty.name} - 醫療工具與資源`;
const pageDescription = `${specialty.description}，包含相關的醫療計算機和衛教內容。`;
const locale = 'zh-TW';
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  locale={locale}
  pageType="category"
  specialty={specialty.id}
>
  <div class="container mx-auto px-4 py-8">
    <!-- 專科標頭 -->
    <div class="text-center mb-12">
      <div class="flex items-center justify-center mb-4">
        {specialty.icon && (
          <span class="text-4xl mr-4">{specialty.icon}</span>
        )}
        <h1 class="text-4xl font-bold text-gray-900">
          {specialty.name}
        </h1>
      </div>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-6">
        {specialty.description}
      </p>
      
    </div>

    <!-- 專科統計組件 -->
    <div class="mb-8 max-w-4xl mx-auto">
      <SpecialtyStats
        specialtyName={specialty.name}
        stats={specialtyStats}
        calculatorCount={relatedCalculators.length}
        showWorkflowStats={isDevelopment}
      />
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- 相關計算機 -->
      <div>
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">
          相關醫療工具
        </h2>
        
        {relatedCalculators.length > 0 ? (
          <div class="space-y-4">
            {relatedCalculators.map((calculator) => (
              <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">
                      {calculator.data?.name?.['zh-TW'] || calculator.data?.name || '未命名工具'}
                    </h3>
                    <p class="text-gray-600 text-sm leading-relaxed">
                      {calculator.data?.description?.['zh-TW'] || calculator.data?.description || '無描述'}
                    </p>
                  </div>
                </div>
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-2 text-sm text-gray-500">
                    <span class={`inline-flex items-center px-2 py-1 rounded text-xs ${
                      calculator.data.difficulty === 'basic' ? 'bg-green-100 text-green-700' :
                      calculator.data.difficulty === 'intermediate' ? 'bg-yellow-100 text-yellow-700' :
                      'bg-red-100 text-red-700'
                    }`}>
                      {calculator.data.difficulty === 'basic' ? '基礎' :
                       calculator.data.difficulty === 'intermediate' ? '中級' : '進階'}
                    </span>
                    <span class="text-xs text-gray-400">
                      證據等級: {calculator.data?.evidenceLevel || 'N/A'}
                    </span>
                  </div>
                  <a 
                    href={`/tools/${calculator.data?.id || calculator.id || '#'}`}
                    class="inline-flex items-center text-medical-primary-600 hover:text-medical-primary-700 font-medium text-sm"
                  >
                    使用工具
                    <svg class="ml-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
            <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
            </div>
            <p class="text-gray-600">目前沒有 {specialty.name} 相關的醫療工具</p>
          </div>
        )}
      </div>

      <!-- 相關衛教內容 -->
      <div>
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">
          相關衛教內容
        </h2>
        
        {relatedEducation.length > 0 ? (
          <div class="space-y-4">
            {relatedEducation.map((article) => (
              <article class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-center space-x-2 mb-3">
                  <span class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${
                    article.data.category === 'disease' ? 'bg-red-100 text-red-800' :
                    article.data.category === 'medication' ? 'bg-blue-100 text-blue-800' :
                    article.data.category === 'procedure' ? 'bg-purple-100 text-purple-800' :
                    article.data.category === 'prevention' ? 'bg-green-100 text-green-800' :
                    article.data.category === 'lifestyle' ? 'bg-teal-100 text-teal-800' :
                    article.data.category === 'symptoms' ? 'bg-orange-100 text-orange-800' :
                    article.data.category === 'diagnosis' ? 'bg-indigo-100 text-indigo-800' :
                    article.data.category === 'treatment' ? 'bg-pink-100 text-pink-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {article.data.category === 'disease' ? '疾病資訊' :
                     article.data.category === 'medication' ? '藥物資訊' :
                     article.data.category === 'procedure' ? '檢查程序' :
                     article.data.category === 'prevention' ? '預防保健' :
                     article.data.category === 'lifestyle' ? '生活方式' :
                     article.data.category === 'symptoms' ? '症狀識別' :
                     article.data.category === 'diagnosis' ? '診斷方法' :
                     article.data.category === 'treatment' ? '治療指引' : article.data.category}
                  </span>
                  {article.data.readingTime && (
                    <span class="text-xs text-gray-500">
                      {article.data.readingTime} 分鐘閱讀
                    </span>
                  )}
                  {article.data.version && (
                    <span class="text-xs text-gray-400">
                      v{article.data.version}
                    </span>
                  )}
                  {isDevelopment && article.data.status !== 'published' && (
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      {article.data.status === 'draft' ? '草稿' :
                       article.data.status === 'in-review' ? '審核中' :
                       article.data.status === 'needs-revision' ? '需修改' :
                       article.data.status === 'quality-check' ? '品質檢查' :
                       article.data.status === 'ready-to-publish' ? '準備發布' : article.data.status}
                    </span>
                  )}
                </div>
                
                <h3 class="text-lg font-semibold text-gray-900 mb-2">
                  {article.data?.title?.['zh-TW'] || article.data?.title || '未命名文章'}
                </h3>
                
                {article.data?.excerpt && (
                  <p class="text-gray-600 text-sm leading-relaxed mb-4">
                    {article.data.excerpt['zh-TW'] || article.data.excerpt}
                  </p>
                )}
                
                <div class="flex items-center justify-between mb-3">
                  <div class="flex items-center space-x-2">
                    {article.data.hasFlowchart && (
                      <span class="inline-flex items-center text-xs text-medical-primary-600">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                        流程圖
                      </span>
                    )}
                    <span class={`text-xs ${
                      article.data.difficulty === 'basic' ? 'text-green-600' :
                      article.data.difficulty === 'intermediate' ? 'text-yellow-600' :
                      'text-red-600'
                    }`}>
                      {article.data.difficulty === 'basic' ? '基礎' :
                       article.data.difficulty === 'intermediate' ? '中級' : '進階'}
                    </span>
                    {article.data.patientFriendly && (
                      <span class="text-xs text-medical-success-600">病患友善</span>
                    )}
                    {article.data.evidenceLevel && (
                      <span class="text-xs text-gray-500">證據等級: {article.data.evidenceLevel}</span>
                    )}
                  </div>
                  
                  <a 
                    href={`/education/${article.slug || '#'}`}
                    class="inline-flex items-center text-medical-primary-600 hover:text-medical-primary-700 font-medium text-sm"
                  >
                    閱讀更多
                    <svg class="ml-1 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
                
                {/* 作者和更新資訊 */}
                {(article.data.author || article.data.lastUpdated) && (
                  <div class="pt-3 border-t border-gray-100">
                    <div class="flex items-center justify-between text-xs text-gray-400">
                      {article.data.author && (
                        <span>作者: {article.data.author['zh-TW'] || article.data.author}</span>
                      )}
                      {article.data.lastUpdated && (
                        <span>更新: {formatDate(article.data.lastUpdated, 'zh-TW')}</span>
                      )}
                    </div>
                  </div>
                )}
              </article>
            ))}
          </div>
        ) : (
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
            <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <p class="text-gray-600">目前沒有 {specialty.name} 相關的衛教內容</p>
          </div>
        )}
      </div>
    </div>

    <!-- 返回按鈕 -->
    <div class="mt-12 text-center">
      <a 
        href="/specialties" 
        class="inline-flex items-center bg-medical-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-medical-primary-700 transition-colors"
      >
        <svg class="mr-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        返回專科列表
      </a>
    </div>
  </div>
</BaseLayout>