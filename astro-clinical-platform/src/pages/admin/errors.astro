---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = "錯誤監控儀表板 | Astro Clinical Platform";
const description = "監控系統錯誤、使用者回饋和系統穩定性";
---

<BaseLayout title={title} description={description}>
  <main class="min-h-screen bg-gray-50">
    <!-- 頁面標題 -->
    <div class="bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">錯誤監控儀表板</h1>
            <p class="text-gray-600 mt-1">監控系統錯誤和使用者回饋</p>
          </div>
          <div class="flex space-x-3">
            <select id="time-range" class="px-3 py-2 border border-gray-300 rounded-md text-sm">
              <option value="1h">過去 1 小時</option>
              <option value="24h" selected>過去 24 小時</option>
              <option value="7d">過去 7 天</option>
              <option value="30d">過去 30 天</option>
            </select>
            <button id="refresh-btn" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 text-sm">
              重新整理
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- 載入狀態 -->
      <div id="loading" class="text-center py-12">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
        <p class="text-gray-600 mt-4">載入錯誤資料中...</p>
      </div>

      <!-- 主要內容 -->
      <div id="dashboard-content" class="hidden space-y-8">
        <!-- 總覽卡片 -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">總錯誤數</p>
                <p id="total-errors" class="text-2xl font-semibold text-gray-900">--</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">關鍵錯誤</p>
                <p id="critical-errors" class="text-2xl font-semibold text-gray-900">--</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">受影響會話</p>
                <p id="affected-sessions" class="text-2xl font-semibold text-gray-900">--</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">系統穩定性</p>
                <p id="system-stability" class="text-2xl font-semibold text-gray-900">--</p>
              </div>
            </div>
          </div>
        </div>

        <!-- 錯誤分佈圖表 -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">錯誤類型分佈</h2>
            </div>
            <div class="p-6">
              <div id="error-type-chart" class="space-y-4">
                <!-- 動態載入 -->
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">錯誤嚴重程度</h2>
            </div>
            <div class="p-6">
              <div id="error-severity-chart" class="space-y-4">
                <!-- 動態載入 -->
              </div>
            </div>
          </div>
        </div>

        <!-- 錯誤群組 -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">錯誤群組</h2>
            <p class="text-sm text-gray-600">相似錯誤的分組統計</p>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">錯誤訊息</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">類型</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">嚴重程度</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">次數</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">首次發生</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">最後發生</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                </tr>
              </thead>
              <tbody id="error-groups-table" class="bg-white divide-y divide-gray-200">
                <!-- 動態載入 -->
              </tbody>
            </table>
          </div>
        </div>

        <!-- 最近錯誤 -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">最近錯誤</h2>
          </div>
          <div class="divide-y divide-gray-200">
            <div id="recent-errors" class="space-y-0">
              <!-- 動態載入 -->
            </div>
          </div>
        </div>

        <!-- 使用者回饋摘要 -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
            <div>
              <h2 class="text-lg font-semibold text-gray-900">使用者回饋摘要</h2>
              <p class="text-sm text-gray-600">最近的使用者回饋和評分</p>
            </div>
            <a href="/admin/feedback" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
              查看詳細回饋 →
            </a>
          </div>
          <div id="feedback-summary" class="p-6">
            <!-- 動態載入 -->
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    let currentTimeRange = '24h';
    let errorData = null;

    // 初始化
    document.addEventListener('DOMContentLoaded', () => {
      loadErrorData();
      bindEventListeners();
    });

    function bindEventListeners() {
      const timeRangeSelect = document.getElementById('time-range');
      const refreshBtn = document.getElementById('refresh-btn');

      timeRangeSelect?.addEventListener('change', (e) => {
        currentTimeRange = e.target.value;
        loadErrorData();
      });

      refreshBtn?.addEventListener('click', () => {
        loadErrorData();
      });
    }

    async function loadErrorData() {
      const loading = document.getElementById('loading');
      const content = document.getElementById('dashboard-content');
      
      loading?.classList.remove('hidden');
      content?.classList.add('hidden');

      try {
        const [errorsResponse, feedbackResponse] = await Promise.all([
          fetch(`/api/analytics/errors?timeRange=${currentTimeRange}`),
          fetch(`/api/analytics/feedback?timeRange=${currentTimeRange}`)
        ]);
        
        const errorsData = await errorsResponse.json();
        const feedbackData = await feedbackResponse.json();
        
        errorData = { errors: errorsData, feedback: feedbackData };
        updateDashboard(errorData);
        
        loading?.classList.add('hidden');
        content?.classList.remove('hidden');
      } catch (error) {
        console.error('Failed to load error data:', error);
        showErrorMessage();
      }
    }

    function updateDashboard(data) {
      updateOverviewCards(data.errors);
      updateErrorCharts(data.errors);
      updateErrorGroupsTable(data.errors.groupedErrors || []);
      updateRecentErrors(data.errors.recentErrors || []);
      updateFeedbackSummary(data.feedback);
    }

    function updateOverviewCards(errorsData) {
      const totalErrors = errorsData.totalErrors || 0;
      const criticalErrors = errorsData.stats?.bySeverity?.critical || 0;
      const affectedSessions = errorsData.stats?.affectedSessionsCount || 0;
      const stability = totalErrors > 0 ? Math.max(0, 100 - (criticalErrors / totalErrors * 100)) : 100;

      document.getElementById('total-errors').textContent = totalErrors.toLocaleString();
      document.getElementById('critical-errors').textContent = criticalErrors.toLocaleString();
      document.getElementById('affected-sessions').textContent = affectedSessions.toLocaleString();
      document.getElementById('system-stability').textContent = `${Math.round(stability)}%`;
    }

    function updateErrorCharts(errorsData) {
      // 錯誤類型分佈
      const typeChart = document.getElementById('error-type-chart');
      if (typeChart && errorsData.stats?.byType) {
        const types = errorsData.stats.byType;
        const total = Object.values(types).reduce((sum, count) => sum + count, 0);
        
        typeChart.innerHTML = Object.entries(types)
          .filter(([, count]) => count > 0)
          .map(([type, count]) => {
            const percentage = total > 0 ? (count / total * 100) : 0;
            const color = getTypeColor(type);
            return `
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 rounded-full ${color} mr-3"></div>
                  <span class="text-sm text-gray-700">${getTypeLabel(type)}</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm font-medium text-gray-900">${count}</span>
                  <span class="text-xs text-gray-500">(${percentage.toFixed(1)}%)</span>
                </div>
              </div>
            `;
          }).join('');
      }

      // 錯誤嚴重程度分佈
      const severityChart = document.getElementById('error-severity-chart');
      if (severityChart && errorsData.stats?.bySeverity) {
        const severities = errorsData.stats.bySeverity;
        const total = Object.values(severities).reduce((sum, count) => sum + count, 0);
        
        severityChart.innerHTML = Object.entries(severities)
          .filter(([, count]) => count > 0)
          .map(([severity, count]) => {
            const percentage = total > 0 ? (count / total * 100) : 0;
            const color = getSeverityColor(severity);
            return `
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-3 h-3 rounded-full ${color} mr-3"></div>
                  <span class="text-sm text-gray-700">${getSeverityLabel(severity)}</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="text-sm font-medium text-gray-900">${count}</span>
                  <span class="text-xs text-gray-500">(${percentage.toFixed(1)}%)</span>
                </div>
              </div>
            `;
          }).join('');
      }
    }

    function updateErrorGroupsTable(groupedErrors) {
      const tbody = document.getElementById('error-groups-table');
      if (!tbody) return;

      tbody.innerHTML = groupedErrors.slice(0, 10).map(group => `
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4">
            <div class="text-sm font-medium text-gray-900 truncate max-w-xs" title="${group.message}">
              ${group.message}
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getTypeColor(group.type)} text-white">
              ${getTypeLabel(group.type)}
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getSeverityColor(group.severity)} text-white">
              ${getSeverityLabel(group.severity)}
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            ${group.count}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            ${new Date(group.firstSeen).toLocaleString()}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            ${new Date(group.lastSeen).toLocaleString()}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
            <button onclick="showErrorDetails('${group.id}')" class="text-blue-600 hover:text-blue-900">
              查看詳情
            </button>
          </td>
        </tr>
      `).join('');
    }

    function updateRecentErrors(recentErrors) {
      const container = document.getElementById('recent-errors');
      if (!container) return;

      container.innerHTML = recentErrors.slice(0, 5).map(error => `
        <div class="p-6">
          <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
              <div class="flex items-center space-x-2 mb-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getSeverityColor(error.severity)} text-white">
                  ${getSeverityLabel(error.severity)}
                </span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getTypeColor(error.type)} text-white">
                  ${getTypeLabel(error.type)}
                </span>
                <span class="text-xs text-gray-500">
                  ${new Date(error.timestamp).toLocaleString()}
                </span>
              </div>
              <p class="text-sm font-medium text-gray-900 mb-1">
                ${error.message}
              </p>
              <p class="text-xs text-gray-500">
                ${error.url}
              </p>
            </div>
          </div>
        </div>
      `).join('');
    }

    function updateFeedbackSummary(feedbackData) {
      const container = document.getElementById('feedback-summary');
      if (!container) return;

      const stats = feedbackData.stats || {};
      const avgRating = stats.averageRating || 0;
      const totalFeedback = stats.total || 0;

      container.innerHTML = `
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold text-blue-600">${totalFeedback}</div>
            <div class="text-sm text-gray-600">總回饋數</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-green-600">${avgRating.toFixed(1)}</div>
            <div class="text-sm text-gray-600">平均評分</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-orange-600">${stats.byType?.bug || 0}</div>
            <div class="text-sm text-gray-600">錯誤報告</div>
          </div>
        </div>
      `;
    }

    function showErrorMessage() {
      const loading = document.getElementById('loading');
      loading.innerHTML = `
        <div class="text-center py-12">
          <div class="text-red-600 mb-4">
            <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <p class="text-gray-600">載入錯誤資料失敗</p>
          <button onclick="loadErrorData()" class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
            重試
          </button>
        </div>
      `;
    }

    // 輔助函數
    function getTypeColor(type) {
      const colors = {
        javascript: 'bg-red-500',
        promise: 'bg-orange-500',
        network: 'bg-blue-500',
        calculator: 'bg-purple-500',
        'user-feedback': 'bg-green-500'
      };
      return colors[type] || 'bg-gray-500';
    }

    function getSeverityColor(severity) {
      const colors = {
        critical: 'bg-red-600',
        high: 'bg-red-500',
        medium: 'bg-yellow-500',
        low: 'bg-green-500'
      };
      return colors[severity] || 'bg-gray-500';
    }

    function getTypeLabel(type) {
      const labels = {
        javascript: 'JavaScript',
        promise: 'Promise',
        network: '網路',
        calculator: '計算機',
        'user-feedback': '使用者回饋'
      };
      return labels[type] || type;
    }

    function getSeverityLabel(severity) {
      const labels = {
        critical: '關鍵',
        high: '高',
        medium: '中',
        low: '低'
      };
      return labels[severity] || severity;
    }

    // 全域函數
    window.showErrorDetails = function(groupId) {
      // 這裡可以實現錯誤詳情模態框
      alert(`顯示錯誤群組 ${groupId} 的詳細資訊`);
    };
  </script>
</BaseLayout>