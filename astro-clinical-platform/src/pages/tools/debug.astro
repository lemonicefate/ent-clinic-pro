---
// 調試頁面 - 測試每個計算器
import PluginCalculator from '../../components/islands/PluginCalculator.tsx';
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>計算器調試頁面</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; background: #f5f5f5; }
    .calculator-test { background: white; margin: 20px 0; padding: 20px; border-radius: 8px; border: 1px solid #ddd; }
    h1 { color: #333; }
    h2 { color: #666; margin-bottom: 15px; }
    .error { background: #fee; border: 1px solid #fcc; padding: 10px; border-radius: 4px; color: #c00; }
  </style>
</head>
<body>
  <h1>計算器調試頁面</h1>
  
  <div class="calculator-test">
    <h2>BMI 計算器 (general.bmi)</h2>
    <PluginCalculator 
      pluginId="general.bmi"
      locale="zh-TW"
      client:load
    />
  </div>
  
  <div class="calculator-test">
    <h2>eGFR 計算器 (nephrology.egfr)</h2>
    <PluginCalculator 
      pluginId="nephrology.egfr"
      locale="zh-TW"
      client:load
    />
  </div>
  
  <div class="calculator-test">
    <h2>CHA2DS2-VASc 評分 (cardiology.cha2ds2-vasc)</h2>
    <PluginCalculator 
      pluginId="cardiology.cha2ds2-vasc"
      locale="zh-TW"
      client:load
    />
  </div>
  
  <div class="calculator-test">
    <h2>測試不存在的計算器 (test.invalid)</h2>
    <PluginCalculator 
      pluginId="test.invalid"
      locale="zh-TW"
      client:load
    />
  </div>
</body>
</html>