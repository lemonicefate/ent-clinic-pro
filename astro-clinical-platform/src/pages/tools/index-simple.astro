---
// 簡化的工具索引頁面
const calculators = [
  {
    id: 'bmi',
    name: 'BMI 計算器',
    description: '身體質量指數計算器，用於評估體重狀況和健康風險',
    category: '一般醫學',
    difficulty: '基礎',
    url: '/tools/bmi'
  },
  {
    id: 'egfr',
    name: 'eGFR 計算器',
    description: '估算腎絲球過濾率計算器，用於評估腎功能',
    category: '腎臟科',
    difficulty: '中級',
    url: '/tools/egfr'
  },
  {
    id: 'cha2ds2-vasc',
    name: 'CHA2DS2-VASc 評分',
    description: '評估心房顫動患者中風風險的臨床評分工具',
    category: '心臟科',
    difficulty: '中級',
    url: '/tools/cha2ds2-vasc'
  }
];

const categories = [...new Set(calculators.map(c => c.category))];
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>醫療計算機工具</title>
  <meta name="description" content="專業的醫療計算機工具集合，包含心臟科、腎臟科等各專科的風險評估和診斷輔助工具">
  <style>
    /* 基本樣式 */
    * { box-sizing: border-box; }
    body { margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; }
    .bg-gray-50 { background-color: #f9fafb; }
    .bg-white { background-color: white; }
    .container { max-width: 1200px; margin: 0 auto; }
    .px-4 { padding-left: 1rem; padding-right: 1rem; }
    .py-8 { padding-top: 2rem; padding-bottom: 2rem; }
    .text-center { text-align: center; }
    .text-4xl { font-size: 2.25rem; }
    .text-xl { font-size: 1.25rem; }
    .font-bold { font-weight: 700; }
    .text-gray-900 { color: #111827; }
    .text-gray-600 { color: #4b5563; }
    .mb-4 { margin-bottom: 1rem; }
    .mb-12 { margin-bottom: 3rem; }
    .mx-auto { margin-left: auto; margin-right: auto; }
    .max-w-3xl { max-width: 48rem; }
    .grid { display: grid; }
    .grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
    .gap-6 { gap: 1.5rem; }
    .p-6 { padding: 1.5rem; }
    .border { border: 1px solid #d1d5db; }
    .border-gray-200 { border-color: #e5e7eb; }
    .rounded-lg { border-radius: 0.5rem; }
    .text-lg { font-size: 1.125rem; }
    .font-semibold { font-weight: 600; }
    .mb-2 { margin-bottom: 0.5rem; }
    .text-sm { font-size: 0.875rem; }
    .text-blue-600 { color: #2563eb; }
    .hover\:text-blue-700:hover { color: #1d4ed8; }
    .transition-colors { transition: color 0.15s ease-in-out; }
    a { text-decoration: none; }
    @media (min-width: 768px) {
      .md\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
      .md\:grid-cols-3 { grid-template-columns: repeat(3, minmax(0, 1fr)); }
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="container mx-auto px-4 py-8">
    <!-- 頁面標題 -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        醫療計算機工具
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        專業的醫療計算機工具集合，協助臨床醫師進行風險評估、診斷輔助和治療決策
      </p>
    </div>

    <!-- 統計概覽 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
      <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
        <div class="text-3xl font-bold text-blue-600 mb-2">
          {calculators.length}
        </div>
        <div class="text-sm text-gray-600">可用工具</div>
      </div>
      
      <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
        <div class="text-3xl font-bold text-green-600 mb-2">
          {categories.length}
        </div>
        <div class="text-sm text-gray-600">醫療專科</div>
      </div>
      
      <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
        <div class="text-3xl font-bold text-purple-600 mb-2">
          {calculators.filter(c => c.difficulty === '基礎').length}
        </div>
        <div class="text-sm text-gray-600">基礎工具</div>
      </div>
    </div>

    <!-- 計算器列表 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {calculators.map(calc => {
        const difficultyColor = calc.difficulty === '基礎' ? 'bg-green-100 text-green-800' : 
                               calc.difficulty === '中級' ? 'bg-yellow-100 text-yellow-800' : 
                               'bg-red-100 text-red-800';
        
        return (
          <div class="bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow group">
            <div class="p-6">
              <div class="flex items-start justify-between mb-4">
                <div class="text-2xl">🧮</div>
                <span class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${difficultyColor}`}>
                  {calc.difficulty}
                </span>
              </div>
              
              <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
                <a href={calc.url}>
                  {calc.name}
                </a>
              </h3>
              
              <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                {calc.description}
              </p>
              
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500">
                  {calc.category}
                </span>
                <a 
                  href={calc.url}
                  class="inline-flex items-center text-sm text-blue-600 hover:text-blue-700 font-medium transition-colors"
                >
                  使用工具
                  <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- 按分類瀏覽 -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">按專科分類</h2>
      
      <div class="space-y-6">
        {categories.map(category => {
          const categoryCalcs = calculators.filter(c => c.category === category);
          const categoryIcon = category === '心臟科' ? '❤️' : 
                              category === '腎臟科' ? '🫘' : 
                              '📋';
          
          return (
            <div class="bg-white rounded-lg border border-gray-200 p-6">
              <div class="flex items-center mb-4">
                <div class="text-2xl mr-3">{categoryIcon}</div>
                <div>
                  <h3 class="text-xl font-semibold text-gray-900">
                    {category}
                  </h3>
                  <p class="text-sm text-gray-600">
                    {categoryCalcs.length} 個工具
                  </p>
                </div>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {categoryCalcs.map(calc => (
                  <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 hover:bg-blue-50 transition-colors">
                    <h4 class="font-medium text-gray-900 text-sm mb-2">
                      <a href={calc.url} class="hover:text-blue-600 transition-colors">
                        {calc.name}
                      </a>
                    </h4>
                    <p class="text-xs text-gray-600 mb-2">
                      {calc.description}
                    </p>
                  </div>
                ))}
              </div>
            </div>
          );
        })}
      </div>
    </section>

    <!-- 使用指南 -->
    <section class="bg-gray-100 rounded-lg p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">
        如何使用醫療計算機
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">1️⃣</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            選擇工具
          </h3>
          <p class="text-gray-600 text-sm">
            根據臨床需求選擇適當的計算機工具
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">2️⃣</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            輸入數據
          </h3>
          <p class="text-gray-600 text-sm">
            準確輸入患者的臨床數據和檢查結果
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">3️⃣</span>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">
            解讀結果
          </h3>
          <p class="text-gray-600 text-sm">
            參考計算結果和臨床建議制定治療計劃
          </p>
        </div>
      </div>
      
      <div class="mt-8 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
        <div class="flex">
          <span class="text-yellow-600 mr-3">⚠️</span>
          <div>
            <h4 class="text-sm font-medium text-yellow-800 mb-1">
              重要提醒
            </h4>
            <p class="text-sm text-yellow-700">
              所有計算結果僅供臨床參考，不能取代專業醫師的臨床判斷。請結合患者具體情況和臨床經驗進行綜合評估。
            </p>
          </div>
        </div>
      </div>
    </section>
  </div>

  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</body>
</html>