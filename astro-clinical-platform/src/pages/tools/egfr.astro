---
/**
 * eGFR 估算腎絲球過濾率計算機頁面
 * 腎功能評估工具 - 使用新的插件系統
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import PluginCalculator from '../../components/islands/PluginCalculator.tsx';
import type { SupportedLocale } from '../../types/calculator.js';

const locale: SupportedLocale = 'zh-TW';

// Static plugin metadata
const pluginMetadata = {
  id: 'egfr',
  namespace: 'nephrology',
  version: '1.0.0',
  name: {
    'zh-TW': 'eGFR 計算器',
    'en': 'eGFR Calculator',
    'ja': 'eGFR計算機'
  },
  description: {
    'zh-TW': '估算腎絲球過濾率計算器，用於評估腎功能',
    'en': 'Estimated Glomerular Filtration Rate calculator for kidney function assessment',
    'ja': '腎機能評価のための推定糸球体濾過率計算機'
  },
  tags: ['nephrology', 'egfr', 'kidney', 'ckd']
};

const breadcrumbs = [
  { label: '首頁', href: '/' },
  { label: '醫療工具', href: '/tools' },
  { label: pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'] || 'eGFR Calculator' }
];

// 結構化資料
const structuredData = {
  "@context": "https://schema.org",
  "@type": "MedicalRiskCalculator",
  "name": pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'],
  "description": pluginMetadata.description[locale] || pluginMetadata.description['zh-TW'],
  "url": `https://astro-clinical-platform.vercel.app/tools/egfr`,
  "medicalSpecialty": "Nephrology",
  "applicationCategory": "Medical Calculator",
  "operatingSystem": "Web Browser",
  "isAccessibleForFree": true,
  "creator": {
    "@type": "Organization",
    "name": "Astro Clinical Platform"
  }
};
---

<BaseLayout 
  title={`${pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']} | Astro Clinical Platform`}
  description={pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
  locale={locale}
  medicalContent={true}
  pageType="calculator"
  breadcrumbs={breadcrumbs}
  structuredData={structuredData}
>
  <main class="container mx-auto px-4 py-8">
    <!-- 計算機標題和描述 -->
    <div class="mb-8">
      <div class="flex items-center space-x-3 mb-4">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            {pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']}
          </h1>
          <div class="flex items-center space-x-4 mt-2">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              {pluginMetadata.namespace}
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              中級
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              v{pluginMetadata.version}
            </span>
            {pluginMetadata.tags && pluginMetadata.tags.length > 0 && (
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                {pluginMetadata.tags.slice(0, 2).join(', ')}
              </span>
            )}
          </div>
        </div>
      </div>
      
      <p class="text-lg text-gray-600 leading-relaxed">
        {pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 計算機主體 - 使用新的插件系統 -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <PluginCalculator 
            key="nephrology.egfr"
            client:load
            pluginId="nephrology.egfr"
            locale={locale}
            theme="light"
            accessibility={{
              highContrast: false,
              largeText: false,
              screenReader: false
            }}
            className="egfr-calculator"
          />
        </div>
      </div>

      <!-- 側邊欄資訊 -->
      <div class="space-y-6">
        <!-- eGFR 分期表 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            CKD 分期標準
          </h2>
          <div class="space-y-3">
            <div class="flex items-center justify-between p-3 rounded-lg bg-green-50 border-l-3 border-green-500">
              <span class="text-sm font-medium text-green-800">G1 (正常或高)</span>
              <span class="text-sm text-green-600">≥ 90</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-yellow-50 border-l-3 border-yellow-500">
              <span class="text-sm font-medium text-yellow-800">G2 (輕度下降)</span>
              <span class="text-sm text-yellow-600">60-89</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-orange-50 border-l-3 border-orange-500">
              <span class="text-sm font-medium text-orange-800">G3a (輕度至中度)</span>
              <span class="text-sm text-orange-600">45-59</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-red-50 border-l-3 border-red-500">
              <span class="text-sm font-medium text-red-800">G3b (中度至重度)</span>
              <span class="text-sm text-red-600">30-44</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-red-100 border-l-3 border-red-600">
              <span class="text-sm font-medium text-red-900">G4 (重度下降)</span>
              <span class="text-sm text-red-700">15-29</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-red-200 border-l-3 border-red-700">
              <span class="text-sm font-medium text-red-900">G5 (腎衰竭)</span>
              <span class="text-sm text-red-800">&lt; 15</span>
            </div>
          </div>
        </div>

        <!-- 臨床意義 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-purple-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            臨床意義
          </h2>
          <div class="space-y-4">
            <div>
              <h3 class="text-sm font-medium text-gray-800 mb-2">eGFR 用途：</h3>
              <ul class="text-sm text-gray-600 space-y-1">
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-purple-500 rounded-full mt-2 mr-3"></span>
                  慢性腎臟病分期
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-purple-500 rounded-full mt-2 mr-3"></span>
                  腎功能監測
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-purple-500 rounded-full mt-2 mr-3"></span>
                  藥物劑量調整
                </li>
                <li class="flex items-start">
                  <span class="flex-shrink-0 w-2 h-2 bg-purple-500 rounded-full mt-2 mr-3"></span>
                  腎替代治療時機評估
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- 計算公式 -->
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
            <svg class="h-5 w-5 text-gray-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
            CKD-EPI 2021 公式
          </h2>
          <div class="text-sm text-gray-700 space-y-2">
            <p>本計算器使用 CKD-EPI 2021 公式，該公式：</p>
            <ul class="space-y-1 ml-4">
              <li>• 移除了種族係數</li>
              <li>• 提高了準確性</li>
              <li>• 適用於成人（≥18歲）</li>
              <li>• 單位：mL/min/1.73m²</li>
            </ul>
          </div>
        </div>

        <!-- 相關工具 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
            相關工具
          </h2>
          <div class="space-y-3">
            <a href="/tools/creatinine-clearance" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">肌酸酐清除率</div>
              <div class="text-xs text-gray-600 mt-1">Cockcroft-Gault 公式</div>
            </a>
            <a href="/tools/uacr" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">尿蛋白肌酸酐比值</div>
              <div class="text-xs text-gray-600 mt-1">UACR 計算器</div>
            </a>
            <a href="/tools/ckd-risk" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">CKD 風險評估</div>
              <div class="text-xs text-gray-600 mt-1">慢性腎臟病風險計算</div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- 參考文獻 -->
    <div class="mt-12">
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
          <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          參考文獻
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              A New Equation to Estimate Glomerular Filtration Rate
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              Inker LA, Eneanya ND, Coresh J, et al.
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>Annals of Internal Medicine</em> (2021)
            </p>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              KDIGO 2024 Clinical Practice Guideline for the Evaluation and Management of CKD
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              Kidney Disease: Improving Global Outcomes
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>Kidney International</em> (2024)
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* 確保計算機在小螢幕上的可用性 */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
  
  /* 列印樣式 */
  @media print {
    .no-print {
      display: none !important;
    }
    
    .bg-white {
      background: white !important;
    }
    
    .border {
      border: 1px solid #e5e7eb !important;
    }
  }
</style>