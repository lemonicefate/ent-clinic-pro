            const category = categoryConfig[calc.config?.category || calc.namespace] || categoryConfig.general;
            const difficulty = getDifficultyBadge(calc.config?.metadata?.difficulty || 'basic');
            
            return (
              <div class="bg-white rounded-lg border border-gray-200 hover:shadow-lg transition-shadow group">
                <div class="p-6">
                  <div class="flex items-start justify-between mb-4">
                    <div class="text-2xl">{category.icon}</div>
                    <div class="flex space-x-2">
                      <span class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ${difficulty.color}`}>
                        {difficulty.label}
                      </span>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        v{calc.metadata.version}
