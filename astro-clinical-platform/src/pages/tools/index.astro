      namespace: 'cardiology',
      version: '1.0.0',
      name: {
        'zh-TW': 'CHA2DS2-VASc 評分',
        'en': 'CHA2DS2-VASc Score',
        'ja': 'CHA2DS2-VAScスコア'
      },
      description: {
        'zh-TW': '評估心房顫動患者中風風險的臨床評分工具',
        'en': 'Clinical scoring tool for assessing stroke risk in atrial fibrillation patients',
        'ja': '心房細動患者の脳卒中リスクを評価する臨床スコアリングツール'
      },
      author: 'Astro Clinical Platform',
      tags: ['cardiology', 'stroke-risk', 'atrial-fibrillation', 'anticoagulation']
    },
    config: {
      category: 'cardiology',
      medical: {
        specialty: ['Cardiology', 'Internal Medicine'],
        evidenceLevel: 'A'
      },
      metadata: {
        difficulty: 'intermediate'
      }
    },
    namespace: 'cardiology'
  },
  {
    pluginId: 'cardiology.lipid-management',
    urlPath: '/tools/lipid-management',
    metadata: {
      id: 'lipid-management',
      namespace: 'cardiology',
      version: '1.0.0',
      name: {
        'zh-TW': '血脂管理與心血管風險計算機',
        'en': 'Lipid Management & Cardiovascular Risk Calculator',
        'ja': '脂質管理・心血管リスク計算機'
      },
      description: {
        'zh-TW': '根據2022臺灣高血壓、高血脂、糖尿病指引，評估心血管風險並提供血脂管理建議',
        'en': 'Assess cardiovascular risk and provide lipid management recommendations based on 2022 Taiwan guidelines',
        'ja': '2022年台湾ガイドラインに基づく心血管リスク評価と脂質管理推奨'
      },
      author: 'Astro Clinical Platform',
      tags: ['cardiology', 'lipid', 'cholesterol', 'cardiovascular-risk', 'taiwan-guidelines']
    },
    config: {
      category: 'cardiology',
      medical: {
        specialty: ['Cardiology', 'Internal Medicine', 'Family Medicine', 'Endocrinology'],
        evidenceLevel: 'A'
      },
      metadata: {
        difficulty: 'intermediate'
      }
    },
    namespace: 'cardiology'
  }
];

const availableCalculators = staticCalculators;
const serviceStats = {
  activeCalculators: availableCalculators.length,
  categoriesCount: new Set(availableCalculators.map(c => c.namespace)).size
};

// Helper function to generate URL path
function getUrlPath(namespace: string, id: string): string {
  // Map plugin IDs to URL paths
  const urlMappings = {
    'general.bmi': '/tools/bmi',
    'nephrology.egfr': '/tools/egfr',
    'cardiology.cha2ds2-vasc': '/tools/cha2ds2-vasc'
  };
  
  const pluginId = `${namespace}.${id}`;
  return urlMappings[pluginId] || `/tools/${id}`;
}

// 獲取精選計算機（基於證據等級和難度）
const featuredCalculators = availableCalculators
  .filter(calc => 
    calc.config?.medical?.evidenceLevel === 'A' || 
    calc.config?.metadata?.difficulty === 'basic' ||
    calc.metadata.tags?.includes('featured')
  )
  .slice(0, 6);

const breadcrumbs = [
  { label: '首頁', href: '/' },
  { label: '醫療工具' }
];

// 按分類分組計算機
const calculatorsByCategory = availableCalculators.reduce((acc, calc) => {
  const category = calc.config?.category || calc.namespace;
  if (!acc[category]) {
    acc[category] = [];
  }
  acc[category].push(calc);
  return acc;
}, {} as Record<string, typeof availableCalculators>);

// 分類圖示和顏色 - 擴展支援新的分類
const categoryConfig = {
  'cardiology': { icon: '❤️', color: 'red', name: '心臟科' },
  'nephrology': { icon: '🫘', color: 'blue', name: '腎臟科' },
  'neurology': { icon: '🧠', color: 'purple', name: '神經科' },
  'emergency': { icon: '🚨', color: 'orange', name: '急診醫學' },
  'internal-medicine': { icon: '🩺', color: 'blue', name: '內科' },
  'family-medicine': { icon: '👨‍⚕️', color: 'green', name: '家醫科' },
  'surgery': { icon: '🔪', color: 'green', name: '外科' },
  'pediatrics': { icon: '👶', color: 'pink', name: '小兒科' },
  'general': { icon: '📋', color: 'gray', name: '一般醫學' }
};

const getDifficultyBadge = (difficulty: string) => {
  switch (difficulty) {
    case 'basic': return { label: '基礎', color: 'bg-green-100 text-green-800' };
    case 'intermediate': return { label: '中級', color: 'bg-yellow-100 text-yellow-800' };
    case 'advanced': return { label: '進階', color: 'bg-red-100 text-red-800' };
    default: return { label: '基礎', color: 'bg-gray-100 text-gray-800' };
  }
};

// Static system statistics
const systemStats = {
  totalPlugins: availableCalculators.length,
  activePlugins: availableCalculators.length
};

// 獲取本地化文字的輔助函數
const getLocalizedText = (text: Record<SupportedLocale, string> | string, targetLocale: SupportedLocale = locale): string => {
  if (typeof text === 'string') return text;
  return text[targetLocale] || text['zh-TW'] || Object.values(text)[0] || '';
};
