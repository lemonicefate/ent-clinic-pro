---
/**
 * Amoxicillin/Clavulanate 劑量計算器頁面
 * 兒童抗生素劑量計算工具 - 使用新的插件系統
 */

import BaseLayout from '../../layouts/BaseLayout.astro';
import PluginCalculator from '../../components/islands/PluginCalculator.tsx';
import type { SupportedLocale } from '../../types/calculator.js';

const locale: SupportedLocale = 'zh-TW';

// Static plugin metadata
const pluginMetadata = {
  id: 'amoxicillin-clavulanate-dose',
  namespace: 'pediatrics',
  version: '1.0.0',
  name: {
    'zh-TW': '兒童 Amoxicillin/Clavulanate 劑量計算器',
    'en': 'Pediatric Amoxicillin/Clavulanate Dose Calculator',
    'ja': '小児用アモキシシリン/クラブラン酸用量計算機'
  },
  description: {
    'zh-TW': '根據兒童體重與治療目標，智能計算最佳 Amoxicillin/Clavulanate 藥錠組合的專業工具',
    'en': 'Professional tool for calculating optimal Amoxicillin/Clavulanate tablet combinations based on pediatric weight and treatment goals',
    'ja': '小児の体重と治療目標に基づいて、最適なアモキシシリン/クラブラン酸錠剤の組み合わせを計算する専門ツール'
  },
  tags: ['pediatrics', 'antibiotics', 'amoxicillin', 'clavulanate', 'dose-calculation']
};

const breadcrumbs = [
  { label: '首頁', href: '/' },
  { label: '醫療工具', href: '/tools' },
  { label: pluginMetadata.name[locale] || pluginMetadata.name['zh-TW'] }
];
---

<BaseLayout 
  title={`${pluginMetadata.name[locale]} | Astro Clinical Platform`}
  description={pluginMetadata.description[locale]}
  locale={locale}
  medicalContent={true}
  pageType="calculator"
  breadcrumbs={breadcrumbs}
>
  <main class="container mx-auto px-4 py-8">
    <!-- 計算機標題和描述 -->
    <div class="mb-8">
      <div class="flex items-center space-x-3 mb-4">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
          <svg class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 7.172V5L8 4z" />
          </svg>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            {pluginMetadata.name[locale] || pluginMetadata.name['zh-TW']}
          </h1>
          <div class="flex items-center space-x-4 mt-2">
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              {pluginMetadata.namespace}
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              中級
            </span>
            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              v{pluginMetadata.version}
            </span>
            {pluginMetadata.tags && pluginMetadata.tags.length > 0 && (
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                {pluginMetadata.tags.slice(0, 2).join(', ')}
              </span>
            )}
          </div>
        </div>
      </div>
      
      <p class="text-lg text-gray-600 leading-relaxed">
        {pluginMetadata.description[locale] || pluginMetadata.description['zh-TW']}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- 計算機主體 - 使用新的插件系統 -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <PluginCalculator 
            client:load
            transition:persist="amoxicillin-clavulanate-dose-calculator"
            pluginId="pediatrics.amoxicillin-clavulanate-dose"
            locale={locale}
            theme="light"
            accessibility={{
              highContrast: false,
              largeText: false,
              screenReader: false
            }}
            className="amoxicillin-clavulanate-dose-calculator"
          />
        </div>
      </div>

      <!-- 側邊欄資訊 -->
      <div class="space-y-6">
        <!-- 使用說明 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-green-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            使用說明
          </h2>
          <div class="space-y-3 text-sm">
            <div class="flex items-start space-x-2">
              <span class="flex-shrink-0 w-5 h-5 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-bold mt-0.5">1</span>
              <span class="text-gray-700">輸入兒童體重（公斤）</span>
            </div>
            <div class="flex items-start space-x-2">
              <span class="flex-shrink-0 w-5 h-5 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-bold mt-0.5">2</span>
              <span class="text-gray-700">選擇劑量目標：標準劑量適用於一般感染，高劑量適用於頑固細菌</span>
            </div>
            <div class="flex items-start space-x-2">
              <span class="flex-shrink-0 w-5 h-5 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-bold mt-0.5">3</span>
              <span class="text-gray-700">選擇用藥頻次（BID/TID/QID）</span>
            </div>
            <div class="flex items-start space-x-2">
              <span class="flex-shrink-0 w-5 h-5 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-bold mt-0.5">4</span>
              <span class="text-gray-700">選擇治療天數（1-5天）</span>
            </div>
            <div class="flex items-start space-x-2">
              <span class="flex-shrink-0 w-5 h-5 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center text-xs font-bold mt-0.5">5</span>
              <span class="text-gray-700">系統將計算最佳藥錠組合，確保 Amox:Clav 比例在 4:1~14:1 範圍內</span>
            </div>
          </div>
        </div>

        <!-- 藥物資訊 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            藥物資訊
          </h2>
          <div class="space-y-3 text-sm">
            <div class="border-l-3 border-blue-500 pl-3">
              <div class="font-medium text-gray-900">Curam 625mg</div>
              <div class="text-gray-600">Amoxicillin 500mg + Clavulanate 125mg</div>
            </div>
            <div class="border-l-3 border-green-500 pl-3">
              <div class="font-medium text-gray-900">Amoxicillin 500mg</div>
              <div class="text-gray-600">純 Amoxicillin 錠劑</div>
            </div>
            <div class="border-l-3 border-indigo-500 pl-3">
              <div class="font-medium text-gray-900">Amoxicillin 250mg</div>
              <div class="text-gray-600">純 Amoxicillin 錠劑（低劑量）</div>
            </div>
          </div>
        </div>

        <!-- 劑量指引 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-purple-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.47-.881-6.08-2.33" />
            </svg>
            劑量指引
          </h2>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between items-center p-2 bg-green-50 rounded">
              <span class="text-gray-700">標準劑量</span>
              <span class="font-medium text-green-700">45 mg/kg/day</span>
            </div>
            <div class="flex justify-between items-center p-2 bg-yellow-50 rounded">
              <span class="text-gray-700">高劑量</span>
              <span class="font-medium text-yellow-700">80-90 mg/kg/day</span>
            </div>
            <div class="flex justify-between items-center p-2 bg-red-50 rounded">
              <span class="text-gray-700">Clavulanate 安全限制</span>
              <span class="font-medium text-red-700">≤ 10 mg/kg/day</span>
            </div>
            <div class="flex justify-between items-center p-2 bg-purple-50 rounded">
              <span class="text-gray-700">理想 Amox:Clav 比例</span>
              <span class="font-medium text-purple-700">4:1 ~ 14:1</span>
            </div>
          </div>
        </div>

        <!-- 適應症 -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h2 class="text-lg font-semibold text-blue-800 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            主要適應症
          </h2>
          <ul class="text-sm text-blue-700 space-y-1">
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-blue-600 rounded-full mt-2 mr-2"></span>
              急性中耳炎
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-blue-600 rounded-full mt-2 mr-2"></span>
              急性鼻竇炎
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-blue-600 rounded-full mt-2 mr-2"></span>
              下呼吸道感染
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-blue-600 rounded-full mt-2 mr-2"></span>
              皮膚軟組織感染
            </li>
          </ul>
        </div>

        <!-- 重要提醒 -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
          <h2 class="text-lg font-semibold text-yellow-800 mb-3 flex items-center">
            <svg class="h-5 w-5 text-yellow-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            重要提醒
          </h2>
          <ul class="text-sm text-yellow-700 space-y-2">
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-yellow-600 rounded-full mt-2 mr-3"></span>
              此工具為理論計算結果，僅供與醫療專業人員討論時參考
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-yellow-600 rounded-full mt-2 mr-3"></span>
              絕不能取代醫師的正式處方，高劑量療法務必在醫師指導下進行
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-yellow-600 rounded-full mt-2 mr-3"></span>
              請確保藥粉完全溶解後再給予兒童服用
            </li>
            <li class="flex items-start">
              <span class="flex-shrink-0 w-2 h-2 bg-yellow-600 rounded-full mt-2 mr-3"></span>
              如有過敏史或不良反應，請立即停藥並諮詢醫師
            </li>
          </ul>
        </div>

        <!-- 相關工具 -->
        <div class="bg-white rounded-lg border border-gray-200 p-6">
          <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
            相關工具
          </h2>
          <div class="space-y-3">
            <a href="/tools/bmi" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">BMI 計算器</div>
              <div class="text-xs text-gray-600 mt-1">評估兒童體重狀況</div>
            </a>
            <a href="/tools/egfr" class="block p-3 rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors">
              <div class="font-medium text-gray-900 text-sm">eGFR 計算器</div>
              <div class="text-xs text-gray-600 mt-1">評估腎功能狀態</div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- 參考文獻 -->
    <div class="mt-12">
      <div class="bg-white rounded-lg border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
          <svg class="h-5 w-5 text-blue-600 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          參考文獻
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              Pediatric Antimicrobial Stewardship Guidelines
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              American Academy of Pediatrics
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>Pediatrics</em> (2023)
            </p>
          </div>
          
          <div class="border border-gray-200 rounded-lg p-4">
            <h3 class="font-medium text-gray-900 mb-2 leading-tight">
              Amoxicillin/Clavulanate Dosing in Pediatric Patients
            </h3>
            <p class="text-sm text-gray-600 mb-2">
              Pediatric Infectious Diseases Society
            </p>
            <p class="text-sm text-gray-500 mb-3">
              <em>Clinical Guidelines</em> (2023)
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* 確保計算機在小螢幕上的可用性 */
  @media (max-width: 768px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
  
  /* 列印樣式 */
  @media print {
    .no-print {
      display: none !important;
    }
    
    .bg-white {
      background: white !important;
    }
    
    .border {
      border: 1px solid #e5e7eb !important;
    }
  }
</style>