# Medical Database API Configuration
# Copy this file to .env.local and fill in your actual API keys

# Infermedica API Configuration
# Get your API keys from: https://developer.infermedica.com/
INFERMEDICA_APP_ID=your_infermedica_app_id_here
INFERMEDICA_APP_KEY=your_infermedica_app_key_here
INFERMEDICA_API_BASE_URL=https://api.infermedica.com

# Canvas Medical API Configuration
# Get your API keys from your Canvas Medical instance
CANVAS_MEDICAL_API_KEY=your_canvas_medical_api_key_here
CANVAS_MEDICAL_API_BASE_URL=https://your-instance.canvasmedical.com

# Drug Interaction API Configuration
# This could be RxNorm, First Databank, or other drug database APIs
DRUG_INTERACTION_API_KEY=your_drug_api_key_here
DRUG_INTERACTION_API_BASE_URL=https://api.druginteraction.com

# RxNorm API (Public, no key required)
# National Library of Medicine's RxNorm API
RXNORM_API_BASE_URL=https://rxnav.nlm.nih.gov/REST

# General Medical API (fallback)
MEDICAL_API_KEY=your_general_medical_api_key_here
MEDICAL_API_BASE_URL=https://api.medical.com

# Development/Testing Configuration
NODE_ENV=development

# Optional: Enable detailed API logging
ENABLE_API_LOGGING=true

# Optional: Custom rate limits (requests per minute)
INFERMEDICA_RATE_LIMIT=100
CANVAS_MEDICAL_RATE_LIMIT=200
DRUG_INTERACTION_RATE_LIMIT=50

# Optional: API timeouts (milliseconds)
INFERMEDICA_TIMEOUT=20000
CANVAS_MEDICAL_TIMEOUT=30000
DRUG_INTERACTION_TIMEOUT=15000

# Security Configuration
# Enable/disable specific integrations
ENABLE_INFERMEDICA=true
ENABLE_CANVAS_MEDICAL=true
ENABLE_DRUG_INTERACTION=true

# Circuit breaker configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60000

# Cache configuration
API_CACHE_ENABLED=true
API_CACHE_TTL=300000

# Monitoring and alerting
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_ALERTING=true